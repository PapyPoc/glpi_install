#!/usr/bin/env bash
#
# GLPI install script
# Author: PapyPoc
# Version: 1.8.0
# Function file
#
# set -Eeuo pipefail
# Ne pas continuer si le script est ex√©cut√© directement

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    echo -e "Ce fichier doit √™tre sourc√©, pas ex√©cut√©.\n">> "${ERRORFILE}"
    return 1
fi
# Affichage d'erreur en rouge
function error(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${ROUGE}${expanded}${NC}" # Couleur rouge
}
# Affichage d'alerte en orange
function warn(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${ORANGE}${expanded}${NC}" # Couleur orange
}
# Affichage d'information en bleu
function info(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${CYAN}${expanded}${NC}" # Couleur cyan
}
# Affichage debug en normal
function debug(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${NC}${expanded}${NC}" # Couleur normale
}
# Exporter une liste blanche de variables utilis√©es dans les fichiers de langue pour que envsubst puisse les remplacer
function export_display_env() {
    # Exporter un ensemble complet de variables (majuscules et minuscules)
    # pouvant √™tre r√©f√©renc√©es comme espaces r√©serv√©s dans les fichiers de langue.
    # Les valeurs par d√©faut sont vides si elles ne sont pas d√©finies.
    local vars_maj=(
        ORIG_USER ADMIN_GROUP ID VERSION_ID ID NAME PRETTY_NAME MSG_NONOK NEW_VERSION REP_GLPI FICHIER_MSG
        ERRORFILE LOGFILE TASK_INDEX TASK_KEY LANGUAGE TIMEZONE IPADRESS INTERFACE DOWNLOADLINK
        DB_USER DB_NAME SQLROOTPWD SQLGLPIPWD ADMINGLPIPWD POSTGLPIPWD TECHGLPIPWD NORMGLPIPWD
        REP_BACKUP BDD_BACKUP REP_SCRIPT MYSQL_CMD MYSQLDUMP_CMD OUTPUT GLPI_CLI_VERSION PHPVERSION
        DEBIAN_VERSIONS UBUNTU_VERSIONS ALMA_VERSIONS CENTOS_VERSIONS ROCKY_VERSIONS REDHAT_VERSIONS MSG_UPGRADE_DISTRO
        NEW_VERSION TAGS VERSION_SELECT
    )
    local vars_min=(
        orig_user admin_group id version_id id name pretty_name msg_nonok new_version rep_glpi fichier_msg
        errorfile logfile task_index task_key language timezone ipadress interface downloadlink
        db_user db_name sqlrootpwd sqlglpipwd adminglpipwd postglpipwd techglpipwd normglpipwd
        rep_backup bdd_backup rep_script mysql_cmd mysqldump_cmd output glpi_cli_version phpversion
        debian_versions ubuntu_versions alma_versions centos_versions rocky_versions redhat_versions msg_upgrade_distro
        new_version tags version_select
    )
    local v _val
    for v in "${vars_maj[@]}" "${vars_min[@]}"; do
        _val="${!v:-}"
        export "$v"="$_val"
    done
}
# Gestion des erreurs avec trap
function on_error() {
    local rc=$?
    local cmd=$BASH_COMMAND
    local line=${BASH_LINENO[0]}

    echo "Erreur d√©tect√©e : '${cmd}' (code=$rc) √† la ligne $line" | tee -a "$ERRORFILE" >&2
    echo "Pile d‚Äôappels :" >> "$ERRORFILE"
    for ((i=${#FUNCNAME[@]}-1; i>=0; i--)); do
        echo "  ‚Ü≥ ${FUNCNAME[$i]}() depuis ${BASH_SOURCE[$i]}:${BASH_LINENO[$((i-1))]}" >> "$ERRORFILE"
    done
    echo "‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ" >> "$ERRORFILE"

    dialog --msgbox "Une erreur est survenue.\n\nCommande : ${cmd}\nCode : ${rc}\n\nConsultez $ERRORFILE pour plus d‚Äôinformations." 40 90 || true
    exit "$rc"
}
# Ex√©cuter une t√¢che et g√©rer les erreurs et les logs
function run_task() {
    debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # D√©finir les variables de t√¢che
    local task_key="$1" task_cmd="$2" index="$3" total="$4"
    # Afficher les informations de la t√¢che
    info "T√¢che: $index/$total - $task_key"
    info "$MSG_COMMAND: $task_cmd"
    echo "$(date '+%Y-%m-%d %H:%M:%S'): START: $task_cmd" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # --- Ex√©cution de la commande ---
    local output exit_code
    output=$(eval "$task_cmd" 2>&1)
    exit_code=$?
    # --- R√©sultat ---
    if (( exit_code == 0 )); then
        echo "$output" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    else
        echo "$(date '+%Y-%m-%d %H:%M:%S'): ERROR: $task_cmd" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        echo "$output" | tee -a "$ERRORFILE"
        warn "$MSG_ERROR_TASK: $task_key (exit=$exit_code)" | tee -a "$ERRORFILE"
        debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Fin (√©chec) de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return $exit_code
    fi
    debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    return 0
}
# V√©rifie si la version est compatible
function compatible() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    local version="$1"
    local -n versions_array="$2"
    [[ ${versions_array[*]} =~ ${version} ]]
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# V√©rifie si la distribution est prise en compte pour l'installation de GLPI
function check_distro(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # V√©rifie si le fichier os-release existe
    source_os_release
    # V√©rifie si la distribution est bas√©e sur Debian, Ubuntu, Alma Linux, Centos ou Rocky Linux
    if [[ "${ID}" =~ ^(debian|ubuntu|almalinux|centos|rocky|rhel)$ ]]; then
        if compatible "$VERSION_ID" DEBIAN_VERSIONS || compatible "$VERSION_ID" UBUNTU_VERSIONS || compatible "$VERSION_ID" ALMA_VERSIONS || compatible "$VERSION_ID" CENTOS_VERSIONS || compatible "$VERSION_ID" ROCKY_VERSIONS || compatible "$VERSION_ID" REDHAT_VERSIONS; then
            info "$MSG_DISTRO_OK" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 0
        else
            warn "$MSG_DISTRO_NONOK" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            warn "$MSG_FORCE_DISTRO" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            if [ -t 0 ]; then
                info "$MSG_FORCE_DISTRO_QUESTION"
                read -r RESPONSE
                case $RESPONSE in
                    O|o|Y|y)
                        info "$MSG_CONTINUING" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                        ;;
                    N|n)
                        info "$MSG_EXITING" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                        return 1
                        ;;
                    *)
                        warn "$MSG_INVALID_ANSWER" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                        return 1
                        ;;
                esac
            else
                warn "$MSG_SCRIPT_NON_INTERACTIVE_DISTRO" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
        fi
        export VERSION_ID ID
    else
        warn "$MSG_DISTRO_INVALID" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Chargement du fichier de langue
function load_language() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    local syslang="${LC_ALL:-${LANG:-}}"
    if [[ $syslang =~ ^fr ]]; then
        LANG_FILE="$REP_SCRIPT/lang/fr_lang.ini"
        LANGUAGE="fr_FR"
    else
        LANG_FILE="$REP_SCRIPT/lang/en_lang.ini"
        LANGUAGE="en_US"
    fi
    if [[ -f $LANG_FILE ]]; then
        # Ensure environment variables used in messages are exported for envsubst
        export_display_env
    # Lire le fichier ligne par ligne, g√©rer CRLF, commentaires, sections
    # et valeurs entre guillemets
        while IFS= read -r line || [ -n "$line" ]; do
            # supprimer CR si pr√©sent (fichiers format Windows)
            line="${line%%$'\r'}"
            # skip empty lines and comments
            # supprimer les espaces de t√™te
            trimmed="${line#"${line%%[![:space:]]*}"}"
            if [ -z "$trimmed" ]; then
                continue
            fi
            case "$trimmed" in
                "#"* | ";"*)
                    continue
                    ;;
            esac
            # ignorer les ent√™tes de section
            [[ $line =~ ^[[:space:]]*\[.*\] ]] && continue
            if [[ $line =~ ^[[:space:]]*([^=[:space:]]+)[[:space:]]*=(.*)$ ]]; then
                local key="${BASH_REMATCH[1]}"
                local value="${BASH_REMATCH[2]}"
                # trim leading/trailing whitespace from value
                value="${value#"${value%%[![:space:]]*}"}"
                value="${value%"${value##*[![:space:]]}"}"
                # remove surrounding single or double quotes if present
                if [[ $value =~ ^\'(.*)\'$ ]]; then
                    value="${BASH_REMATCH[1]}"
                elif [[ $value =~ ^\"(.*)\"$ ]]; then
                    value="${BASH_REMATCH[1]}"
                fi
                # D√©velopper les espaces r√©serv√©s dans la valeur avec envsubst
                # (pr√©f√©r√©) ou utiliser eval en secours
                local expanded_value
                if command -v envsubst >/dev/null 2>&1; then
                    # envsubst reads from the environment, so ensure variables are exported
                    expanded_value=$( ( set +u; printf '%s' "$value" | envsubst ) )
                else
                    # fallback : effectuer l'expansion de param√®tres en toute s√©curit√©
                    # (autoriser les variables non d√©finies)
                    expanded_value=$( ( set +u; eval "printf '%s' \"$value\"" ) )
                fi
                # affecter en toute s√©curit√© √† une variable nomm√©e par $key
                printf -v "$key" '%s' "$expanded_value"
            fi
        done < "$LANG_FILE"
        info "$MSG_LANG_LOADED ($LANGUAGE)"
    else
        warn "Language file not found: $LANG_FILE"
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
function check_distro_user(){
    local rep=$1
    WEB_USER=$(stat -c '%U' "${rep}")
    export WEB_USER
}
# Demander √† l'utilisateur de choisir la version de GLPI (16 derni√®res), le r√©pertoire d'installation, le nom de la base et l'utilisateur BDD via dialog
function prompt_install_options(){
    clear
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] D√©but de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    local FIND_REP_GLPI=""
    # Recherche des installations GLPI existantes
    local glpi_dirs=()
    # Parcours des r√©pertoires standards √† explorer
    for path in ${PATHS_TO_CHECK}; do
        # Recherche des dossiers contenant "glpi" jusqu‚Äô√† 3 niveaux de profondeur
        FOUND=$(find "${path}" -maxdepth 3 -type d -name "*glpi*" 2>/dev/null)
        # Si un ou plusieurs r√©pertoires sont trouv√©s, on les ajoute au tableau
        if [[ -n "$FOUND" ]]; then
            # On lit chaque ligne de la sortie de find et on l‚Äôajoute au tableau
            while IFS= read -r dir; do
                glpi_dirs+=("$dir")
            done <<< "$FOUND"
        fi
    done
    # Si plusieurs r√©pertoires GLPI trouv√©s, demander √† l'utilisateur de choisir
    if [[ "${#glpi_dirs[@]}" -gt 0 ]]; then
        if [[ "${#glpi_dirs[@]}" -gt 1 ]]; then
            # Pr√©parer les arguments pour dialog
            args=()
            version_map=()
            number=1
            first="ON"
            # Correction : boucle while ‚Üí for (syntaxe correcte)
            for dir in "${glpi_dirs[@]}"; do
                args+=("${number}" "GLPI ${dir}" "${first}")
                version_map+=("${dir}")
                first="OFF"
                ((number++))
            done
            # Menu de s√©lection d‚Äôinstallation GLPI
            exec 3>&1
            FIND_REP_GLPI=$(dialog \
                --backtitle "$MSG_TITRE" \
                --title "${MSG_GLPI_SELECT_INSTALLED}" \
                --radiolist "${MSG_GLPI_SELECT_INSTALLED_CHOIX}" 20 70 8 \
                "${args[@]}" \
                3>&1 1>&2 2>&3)
            rc=$?
            exec 3>&-
            sleep 5
            if [[ $rc -ne 0 ]]; then
                { warn "S√©lection de l'installation GLPI annul√©e."; } \
                    1> >(tee -a "${DEBUGFILE}") \
                    2> >(tee -a "${ERRORFILE}" >&2)
                dialog --title "Annulation" --msgbox "Installation annul√©e par l'utilisateur." 7 50
                exit 1
            fi
            # Convertir le num√©ro choisi en index du tableau (0-based)
            index=$((FIND_REP_GLPI - 1))
            # R√©cup√©rer le vrai chemin correspondant
            FIND_REP_GLPI="${version_map[$index]}"
            # V√©rification utilisateur/distro avant ex√©cution
            if check_distro_user "${FIND_REP_GLPI}"; then
                GLPI_CLI_VERSION=$(sudo -u "${WEB_USER}" php "${FIND_REP_GLPI}/bin/console" --no-ansi --version 2>/dev/null | awk '{print $3}' || true)
            fi
            # R√©cup√©ration des versions GLPI disponibles sur GitHub
            tags=""
            api_url="https://api.github.com/repos/glpi-project/glpi/tags"
            tags=$(curl -s "${api_url}" | jq -r '.[].name' | grep -E '^[0-9]+\.[0-9]+\.[0-9]+$' | sort -Vr | uniq | head -n 16)
            # R√©cup√®re les tags au format X.Y.Z
            tags=$(curl -s "${api_url}" \
                | jq -r '.[].name' \
                | grep -E '^[0-9]+\.[0-9]+\.[0-9]+$' \
                | grep -v -E '(rc|beta|alpha)' \
                | uniq \
                | head -n 16) 
            # Filtrage : ne garder que les versions avant GLPI_CLI_VERSION (donc plus r√©centes) ---
            newer_tags=()
            for tag in ${tags}; do
                if [[ "${tag}" == "${GLPI_CLI_VERSION}" ]]; then
                    break  # On s'arr√™te d√®s qu'on atteint la version install√©e
                fi
                newer_tags+=("${tag}")
            done
            # Pr√©paration du menu de s√©lection de version GLPI
            args=()
            version_map=()
            number=1
            first="ON"
            for tag in "${newer_tags[@]}"; do
                args+=("${number}" "GLPI ${tag}" "${first}")
                version_map+=("${tag}")
                first="OFF"
                ((number++))
            done
            # S√©lecteur de version GLPI
            exec 3>&1
            VERSION_SELECT=$(dialog \
                --backtitle "$MSG_TITRE" \
                --title "${MSG_PARAM_VERSION}" \
                --radiolist "${MSG_PARAM_VERSION_CHOIX}" 23 50 8 \
                "${args[@]}" \
                3>&1 1>&2 2>&3)
            rc=$?
            exec 3>&-
            if [[ "${rc}" -ne 0 ]]; then
                warn "S√©lection de la version annul√©e."
                exit 1
            fi
            # Convertir le num√©ro choisi en index du tableau (0-based)
            local index=""
            index=$((VERSION_SELECT - 1))
            # R√©cup√©rer le vrai tag correspondant
            VERSION_SELECT="${version_map[$index]}"
            echo "R√©pertoire GLPI s√©lectionn√© : ${FIND_REP_GLPI}" # Pour Debug
            echo "Version GLPI install√©e : ${GLPI_CLI_VERSION}" # Pour Debug
            echo "Version GLPI s√©lectionn√©e pour mise √† jour : ${VERSION_SELECT}" # Pour Debug
            info "${MSG_GLPI_INSTALLED}${GLPI_CLI_VERSION}, dans le r√©pertoire : ${FIND_REP_GLPI}"
            dialog --title "${MSG_INFO}" --msgbox "\n${MSG_GLPI_INSTALLED}${GLPI_CLI_VERSION}, dans le r√©pertoire : ${FIND_REP_GLPI}\n\n \
                ${MSG_UPGRADE1}${GLPI_CLI_VERSION}${MSG_UPGRADE2}${VERSION_SELECT}" 10 100
            export VERSION_SELECT FIND_REP_GLPI GLPI_CLI_VERSION
            # Lancement de la mise √† jour
            sleep 50
            update

        fi
    else
        tags=$(printf '%s\n' "${tags}" | sort -Vr | uniq | head -n 16)
        local args=() first=ON number=1 version_map=()
        while IFS= read -r tag; do
            args+=("${number}" "GLPI ${tag}" "${first}")
            version_map+=("${tag}")
            first=OFF
            number=$((number + 1))
        done <<< "${tags}"
        exec 3>&1
        VERSION_SELECT=$(dialog --backtitle "$MSG_TITRE" --title "${MSG_PARAM_VERSION}" \
        --radiolist "${MSG_PARAM_VERSION_CHOIX}" 23 50 8 "${args[@]}" 3>&1 1>&2 2>&3)
        local rc=$?
        exec 3>&-
        if [ "${rc}" -ne 0 ]; then
            warn "S√©lection de la version annul√©e."
            return 1
        fi
        # VERSION_SELECT retourne le tag choisi (ici nous utilisons des tags num√©riques mapping -> version_map)
        if ! [[ "${VERSION_SELECT}" =~ ^[0-9]+$ ]]; then
            warn "Valeur de version invalide retourn√©e : ${VERSION_SELECT}"
            return 1
        fi
        # Convertir le num√©ro choisi en index du tableau (0-based)
        local index=""
        index=$((VERSION_SELECT - 1))
        # R√©cup√©rer le vrai tag correspondant
        VERSION_SELECT="${version_map[$index]}"
        if [ $index -lt 0 ] || [ $index -ge ${#version_map[@]} ]; then
            warn "Index de version hors plage : ${index}"
            return 1
        fi
        WIDTH_REP=$(( ${#MSG_PARAM_REP} ))
        WIDTH_DB_HOST=$(( ${#MSG_PARAM_DB_HOST} ))
        WIDTH_DB_NAME=$(( ${#MSG_PARAM_DB_NAME} ))
        WIDTH_DB_USER=$(( ${#MSG_PARAM_DB_USER} ))
        WIDTH=$(( WIDTH_REP > WIDTH_DB_HOST ? WIDTH_REP : WIDTH_DB_HOST ))
        WIDTH=$(( WIDTH > WIDTH_DB_NAME ? WIDTH : WIDTH_DB_NAME ))
        WIDTH=$(( WIDTH > WIDTH_DB_USER ? WIDTH : WIDTH_DB_USER ))
        WIDTH=$(( WIDTH + 6 ))
        local _def_rep="" rep_glpi="" _def_db_host="" db_host="" _def_db_name="" db_name="" _def_db_user="" db_user=""
        if [ -n "${FIND_REP_GLPI}" ]; then
            _def_rep="REP_GLPI:-${FIND_REP_GLPI}"
        else
            _def_rep="REP_GLPI:-/var/www/html/glpi/"
        fi
        local _def_db_host="${DB_HOST:-localhost}" _def_db="${DB_NAME:-glpi}" _def_user="${DB_USER:-glpi_user}"
        while true; do
            exec 3>&1
            form=$(dialog --backtitle "$MSG_TITRE" --title "$MSG_PARAM_TITLE" \
                --form "${MSG_GLPI_SELECT_PARAM_1} ${VERSION_SELECT} ${MSG_GLPI_SELECT_PARAM_2}" 18 68 8 \
                "üìÅ ${MSG_PARAM_REP}"     1 2 "${_def_rep}" 1 ${WIDTH} 20 40 \
                "üóÑÔ∏è ${MSG_PARAM_DB_HOST}" 3 2 "${_def_db_host}" 3 ${WIDTH} 20 20 \
                "üíæ ${MSG_PARAM_DB_NAME}" 5 2 "${_def_db}" 5 ${WIDTH} 20 20 \
                "üë§ ${MSG_PARAM_DB_USER}" 7 2 "${_def_user}" 7 ${WIDTH} 20 20 \
                2>&1 1>&3)
            rc=$?
            exec 3>&-
            # Transformer les lignes du formulaire en variables
            IFS=$'\n' read -r rep_glpi db_host db_name db_user <<< "$form"
            rep_glpi="${rep_glpi#"${rep_glpi%%[![:space:]]*}"}"; rep_glpi="${rep_glpi%"${rep_glpi##*[![:space:]]}"}"
            db_host="${db_host#"${db_host%%[![:space:]]*}"}"; db_host="${db_host%"${db_host##*[![:space:]]}"}"
            db_name="${db_name#"${db_name%%[![:space:]]*}"}"; db_name="${db_name%"${db_name##*[![:space:]]}"}"
            db_user="${db_user#"${db_user%%[![:space:]]*}"}"; db_user="${db_user%"${db_user##*[![:space:]]}"}"
            rep_glpi="${rep_glpi//[^A-Za-z0-9_\/.-]/_}"
            db_host="${db_host//[^A-Za-z0-9_\/.-]/_}"
            db_name="${db_name//[^A-Za-z0-9_]/_}"
            db_user="${db_user//[^A-Za-z0-9_]/_}"
            [ -z "$rep_glpi" ] && rep_glpi="$_def_rep"
            [ -z "$db_host" ] && db_host="$_def_db_host"
            [ -z "$db_name" ] && db_name="$_def_db"
            [ -z "$db_user" ] && db_user="$_def_user"
            if [[ ! "$db_name" =~ ^[A-Za-z_][A-Za-z0-9_]*$ ]]; then
                db_name="glpi_${db_name}"
            fi
            rep_glpi="${rep_glpi//\\//}"
            if [ -z "${rep_glpi}" ] || [[ "${rep_glpi}" != /* ]]; then
                rep_glpi="${_def_rep}"
            fi
            rep_glpi="$(printf '%s' "${rep_glpi}" | sed -E 's#/{2,}#/#g')"
            REP_GLPI="${rep_glpi%/}/"
            DB_HOST="$db_host"
            DB_NAME="$db_name"
            DB_USER="$db_user"
            # Si annulation ou ESC
            if [[ $rc -ne 0 ]]; then
                warn "Formulaire annul√© par l‚Äôutilisateur." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                dialog --title "${MSG_INFO}" --msgbox "Installation annul√©e par l'utilisateur." 7 60
                exit 1
            fi
            # --- VALIDATIONS ---
            # R√©pertoire d‚Äôinstallation
            if ! validate_glpi_path "$REP_GLPI"; then
                continue
            fi
            # H√¥te de la base de donn√©es
            if ! validate_db_host "$DB_HOST"; then
                continue
            fi
            # Nom de la base de donn√©es
            if ! validate_db_name "$DB_NAME"; then
                continue
            fi
            # Utilisateur de la base de donn√©es
            if ! validate_db_user "$DB_USER"; then
                continue
            fi
            # Si tout est valide
            break
        done
        export DB_HOST REP_GLPI DB_NAME DB_USER VERSION_SELECT
    fi
    # Assignation des valeurs finales
    export DOWNLOADLINK="https://github.com/glpi-project/glpi/releases/download/${VERSION_SELECT}/glpi-${VERSION_SELECT}.tgz"
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Valide le r√©pertoire d‚Äôinstallation de GLPI
function validate_glpi_path() {
    : "${BASH_VERSION:?Ce script doit √™tre ex√©cut√© avec bash}"
    local path="$1"
    local clean_path
    # Nettoyage
    clean_path="$(printf '%s' "$path" | tr -d '\r\n' | sed -E 's#/{2,}#/#g' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    # V√©rification du format
    if ! [[ "$clean_path" =~ ^(/var/www|/srv|/opt|/usr/share)/[^[:space:]]*glpi[^[:space:]]*$ ]]; then
        dialog --msgbox "R√©pertoire d‚Äôinstallation invalide : ${clean_path}\n\nDoit commencer par /var/www/, /srv/, /opt/ ou /usr/share/\n   et contenir 'glpi' dans le nom d‚Äôun dossier." 12 70
        warn "Validation √©chou√©e : r√©pertoire d‚Äôinstallation invalide (${clean_path})"
        return 1
    fi
    return 0
}
# Valide le r√©pertoire d‚Äôinstallation de GLPI
function validate_db_host() {
    host=$1
    # 1Ô∏è‚É£ Nettoyage de base
    clean_host=$(printf '%s' "$host" \
        | tr -d '\r' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')
    # 2Ô∏è‚É£ Cas simples
    case "$clean_host" in
        localhost|::1|\[::1\])
            return 0 ;;
    esac
    # 3Ô∏è‚É£ V√©rif IPv4 (structure correcte)
    if printf '%s\n' "$clean_host" | grep -Eq '^([0-9]{1,3}\.){3}[0-9]{1,3}$'; then
        IFS=.
        set -- $clean_host
        for o in "$@"; do
            case $o in
                *[!0-9]*) dbhost_err "$clean_host"; return 1 ;;
            esac
            [ "$o" -ge 0 ] 2>/dev/null && [ "$o" -le 255 ] 2>/dev/null || {
                dbhost_err "$clean_host"; return 1;
            }
        done
        return 0
    fi
    # 4Ô∏è‚É£ V√©rif nom de domaine (FQDN simple)
    if printf '%s\n' "$clean_host" | grep -Eq '^([A-Za-z0-9]([A-Za-z0-9-]{0,61}[A-Za-z0-9])?\.)+[A-Za-z]{2,}$'; then
        return 0
    fi
    # 5Ô∏è‚É£ Sinon invalide
    dbhost_err "$clean_host"
    return 1
}
# üîß Helper message d'erreur + log
function dbhost_err() {
    v=$1
    dialog --msgbox "H√¥te de base de donn√©es invalide : ${v}\n\nAutoris√© : localhost, ::1/[::1], nom de domaine complet ou adresse IPv4." 10 70
    warn "Validation √©chou√©e : h√¥te DB invalide (${v})"
}
# Valide le nom de la base de donn√©es
function validate_db_name() {
    local name="$1"
    local clean_name
    clean_name="$(printf '%s' "$name" | tr -d '\r\n' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    if [[ "$clean_name" =~ ^[A-Za-z_][A-Za-z0-9_]{0,63}$ ]]; then
        return 0
    else
        dialog --msgbox "Nom de base de donn√©es invalide : ${clean_name}\n\nDoit commencer par une lettre ou un underscore (_)\n   et contenir uniquement lettres, chiffres ou underscores (max 64 caract√®res)." 12 70
        warn "Validation √©chou√©e : nom de base invalide (${clean_name})"
        return 1
    fi
}
# Valide le nom d‚Äôutilisateur de la base de donn√©es
function validate_db_user() {
    local user="$1"
    local clean_user
    clean_user="$(printf '%s' "$user" | tr -d '\r\n' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    if [[ "$clean_user" == "root" ]]; then
        dialog --msgbox "Nom d‚Äôutilisateur invalide : ${clean_user}\n\nL‚Äôutilisateur de la base de donn√©es ne peut pas √™tre 'root'." 10 70
        warn "Validation √©chou√©e : utilisateur 'root' interdit"
        return 1
    fi
    if [[ "$clean_user" =~ ^[A-Za-z_][A-Za-z0-9_]*$ ]]; then
        return 0
    else
        dialog --msgbox "Nom d‚Äôutilisateur invalide : ${clean_user}\n\nDoit commencer par une lettre ou un underscore (_)\n   et contenir uniquement lettres, chiffres ou underscores." 10 70
        warn "Validation √©chou√©e : utilisateur invalide (${clean_user})"
        return 1
    fi
}
# V√©rifie si GLPI est install√© ou pas
function check_install() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # Si GLPI est d√©j√† install√©
    if [[ -n "${FIND_REP_GLPI}" ]]; then
        FIND_REP_GLPI="${FIND_REP_GLPI%/}/"
        echo "R√©pertoire GLPI trouv√© : ${FIND_REP_GLPI}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        # --- Comparaison ---
        if [[ -n "${GLPI_CLI_VERSION}" && -n "${VERSION_SELECT}" && "${GLPI_CLI_VERSION}" != "${VERSION_SELECT}" ]]; then
            if [[ "$(printf '%s\n%s\n' "${GLPI_CLI_VERSION}" "${VERSION_SELECT}" | sort -V | head -n1)" == "${GLPI_CLI_VERSION}" ]]; then
                dialog --title "GLPI" --sleep 5 --infobox "\n\n${MSG_GLPI_UPDATE}\n\nGLPI ${GLPI_CLI_VERSION} ‚Üí ${VERSION_SELECT}" 10 50
                if update; then
                    dialog --title "Information" --msgbox "Mise √† jour GLPI ${GLPI_CLI_VERSION} ‚Üí ${VERSION_SELECT} termin√©e." 6 60
                    info "Mise √† jour GLPI ${GLPI_CLI_VERSION} ‚Üí ${VERSION_SELECT} termin√©e." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                    return 0
                else
                    dialog --title "Erreur" --msgbox "La mise √† jour de GLPI a √©chou√© ou a √©t√© annul√©e." 6 60
                    error "√âchec de la mise √† jour GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                    exit 1
                fi
            fi
        else
            dialog --title "GLPI" --sleep 5 --infobox "\n\n${MSG_GLPI_NEW}\n\nGLPI ${VERSION_SELECT}" 10 50
            if glpi_install; then
                dialog --title "Information" --msgbox "L'installation de GLPI est termin√©e." 6 60
                info "Installation de GLPI ${VERSION_SELECT} termin√©e." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 0
            else
                dialog --title "Erreur" --msgbox "L'installation de GLPI a √©chou√© ou a √©t√© annul√©e." 6 60
                error "√âchec de l'installation GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                exit 1
            fi
        fi
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Ex√©cuter les t√¢ches avec barre de progression
function glpi_install() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    declare -A tasks=(
        ["$MSG_T01"]="update_distro"
        ["$MSG_T02"]="install_packages"
        ["$MSG_T03"]="network_info"
        ["$MSG_T04"]="mariadb_configure"
        ["$MSG_T05"]="install_glpi"
        ["$MSG_T06"]="setup_glpi"
        ["$MSG_T07"]="maj_user_glpi"
        ["$MSG_T08"]="write_credentials"
    )
    local task_order=("$MSG_T01" "$MSG_T02" "$MSG_T03" "$MSG_T04" "$MSG_T05" "$MSG_T06" "$MSG_T07" "$MSG_T08")
    local total_tasks=${#task_order[@]}
    local task_index=0
    (
    task_index=0
    for task_key in "${task_order[@]}"; do
        task_index=$((task_index + 1))
        progress=$((task_index * 100 / total_tasks))

        # --- Affichage progression
        echo "$progress"
        echo "XXX"
        echo "$task_index/$total_tasks - $task_key"
        echo "XXX"
        debug "$(date '+%F %T'): [START] $task_key" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        # --- Ex√©cution silencieuse de la t√¢che
        if run_task "$task_key" "${tasks[$task_key]}" "$task_index" "$total_tasks" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            debug "$(date '+%F %T'): [END] $task_key" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        else
            echo "100"
            echo "XXX"
            echo "$task_index/$total_tasks - $task_key : ${MSG_NONOK}"
            echo "XXX"
            warn "$(date '+%F %T'): [ERROR] $task_key error." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            dialog --title "Erreur" --msgbox "\n${MSG_ERROR_INSTALL}\n\nConsultez : ${ERRORFILE}" 8 70
            error "$MSG_ERROR_INSTALL\n\nConsultez : ${ERRORFILE}" | tee -a "${ERRORFILE}"
            sleep 3
            exit 1
        fi
    done
    ) | dialog --clear --backtitle "$MSG_TITRE" --title "$MSG_TITRE_GAUGE" --gauge 8 120 0
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Mise √† jour de la distribution
function update_distro(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
           info "$MSG_UPGRADE_DISTRO"
           timedatectl set-ntp true # Synchronise l'heure
           sleep 5
           apt-get update && apt-get upgrade -y
    elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
           info "$MSG_UPGRADE_DISTRO"
           chronyc makestep # Synchronise l'heure
           sleep 5
           yum update -y && yum upgrade -y
	fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Adresse IP de la machine
function network_info() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # D√©tection de l‚Äôinterface principale (hors loopback et interfaces virtuelles)
    INTERFACE=$(ip route get 1.1.1.1 2>/dev/null | awk '/dev/ {print $5; exit}')
    if [[ -z "$INTERFACE" ]]; then
        INTERFACE=$(ip -o link show | awk -F': ' '!/lo|docker|vir|veth/ {print $2; exit}')
    fi
    # R√©cup√©ration de l‚Äôadresse IP associ√©e
    IPADRESS=$(ip -4 addr show "$INTERFACE" 2>/dev/null | awk '/inet / {print $2}' | cut -d'/' -f1 | head -n1)
    # V√©rification et export
    if [[ -n "$IPADRESS" ]]; then
        export IPADRESS
        info "$(date '+%F %T'): INFO: Interface d√©tect√©e : ${INTERFACE}, IP : ${IPADRESS}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    else
    warn "Impossible de d√©terminer l‚Äôadresse IP du serveur via l‚Äôinterface ${INTERFACE:-inconnue}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        IPADRESS="127.0.0.1"
        export IPADRESS
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Installation des √©l√©ments n√©cessaire
function install_packages(){
    debug "$(date '+%F %T') [$$][DEBUG:install_packages] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    source_os_release
    if [[ "${ID:-}" =~ ^(debian|ubuntu)$ ]]; then
        sleep 1
        export DEBIAN_FRONTEND=noninteractive
        # update cache first
        apt-get update
        if command -v apt-get update; then
            echo "$(date '+%Y-%m-%d %H:%M:%S'): DEBUG: apt-get update" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            if ! apt-get update; then
                warn "apt-get update failed"
                # continue, maybe cached; but log
            fi
        else
            error "apt-get not found, cannot install packages on Debian/Ubuntu branch" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_INSTALL_EXT_PHP"
        if ! sudo apt-get install -y php-{bcmath,mysql,mbstring,curl,gd,xml,intl,ldap,apcu,opcache,xmlrpc,zip,bz2} 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_PHP_EXT_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_INSTALL_SERVICE"
        if ! sudo apt-get install -y wget composer tar apache2 apache2-bin mariadb-server mariadb-client perl php 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_LAMP_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_ACTIVE_START_BDD"
        if ! systemctl enable mariadb 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "√âchec de l'activation de MariaDB." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! systemctl restart mariadb 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "√âchec du red√©marrage de MariaDB." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_ACTIVE_START_WEB"
        if ! systemctl enable apache2 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "√âchec de l'activation d'Apache2." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! systemctl restart apache2 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "√âchec du red√©marrage d'Apache2." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
    elif [[ "${ID:-}" =~ ^(almalinux|centos|rocky|rhel|fedora)$ ]]; then
        sleep 1
        dnf makecache --refresh
        if ! command -v dnf >/dev/null 2>&1; then
            error "dnf not found, cannot install packages on RHEL-like branch" | tee -a "${ERRORFILE}"
            return 1
        fi
        if ! dnf makecache --refresh 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_EPEL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            # continue; attempt install may still work
        fi
        if ! dnf install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-9.noarch.rpm 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_EPEL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! dnf module reset -y php nginx mariadb composer 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_MODULES_RESET_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! dnf module install -y php:8.2 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_PHP_INSTALL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! dnf module install -y nginx:1.24 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_NGINX_INSTALL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! dnf module install -y mariadb:10.11 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_MARIADB_INSTALL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_AUTO_UPDATES"
        if ! dnf install dnf-automatic -y 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            error "$MSG_DNF_AUTO_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        {
            sed -i 's/^\(;\?\)\(apply_updates =\).*/\2 yes/' /etc/dnf/automatic.conf
            sed -i 's/^\(;\?\)\(reboot =\).*/\2 when-needed/' /etc/dnf/automatic.conf
            sed -i 's/^\(;\?\)\(upgrade_type =\).*/\2 security/' /etc/dnf/automatic.conf
        }
        if ! mkdir /etc/systemd/system/dnf-automatic.timer.d 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            warn "$MSG_DNF_AUTO_DIR_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        sudo tee /etc/systemd/system/dnf-automatic.timer.d/override.conf << 'EOF'
[Unit]
Description=dnf-automatic timer
ConditionPathExists=!/run/ostree-booted
Wants=network-online.target

[Timer]
OnCalendar=*-*-* 6:00
RandomizedDelaySec=60m
Persistent=true
EOF
        if ! systemctl enable --now dnf-automatic.timer; then
            warn "$MSG_DNF_AUTO_ACTIVATE_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_INSTALL_EXT_PHP"
        if ! dnf install -y php-{bcmath,mysql,mbstring,curl,gd,xml,intl,ldap,apcu,opcache,xmlrpc,zip,bz2}; then
            warn "$MSG_PHP_EXT_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        info "$MSG_INSTALL_SERVICE lamp..."
        if ! dnf install -y crontabs logrotate cronie tar nginx mariadb-server mariadb perl curl jq php epel-release; then
            warn "$MSG_LAMP_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        sed -i 's/^\(;\?\)\(user =\).*/\2 nginx/' /etc/php-fpm.d/www.conf
        sed -i 's/^\(;\?\)\(group =\).*/\2 nginx/' /etc/php-fpm.d/www.conf
        info "$MSG_ACTIVE_START_WEB MariaDB, d'ENGINE X et de PHP-FPM"
        if ! systemctl enable --now mariadb nginx php-fpm; then
            warn "$MSG_SERVICES_START_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        if ! firewall-cmd --permanent --zone=public --add-service=http || ! firewall-cmd --reload; then
            warn "$MSG_FIREWALL_FAILED" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Configuration de la base de donn√©es MariaDB
function mariadb_configure() { 
    {
        debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}"
        # D√©tecter la commande MySQL/MariaDB
        info "$MSG_BDD_CONFIG"
    } | tee -a "${DEBUGFILE}"
    MYSQL_CMD=$(command -v mysql || command -v mariadb || echo mysql)
    if [ -z "$MYSQL_CMD" ]; then 
        error "Commande MySQL/MariaDB introuvable" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    sleep 1
    # Construire la commande SQL et l'ex√©cuter avec -e (√©vite les probl√®mes d'heredoc et de quoting)
    local _sql_root
    _sql_root="ALTER USER 'root'@'localhost' IDENTIFIED BY '${SQLROOTPWD}';"
    _sql_root+="\nDELETE FROM mysql.user WHERE User='';"
    _sql_root+="\nDELETE FROM mysql.user WHERE User='root' AND Host!='localhost';"
    _sql_root+="\nDROP DATABASE IF EXISTS test;"
    _sql_root+="\nDELETE FROM mysql.db WHERE Db='test' OR Db LIKE 'test_%';"
    _sql_root+="\nGRANT ALL PRIVILEGES ON *.* TO 'root'@'localhost' WITH GRANT OPTION;"
    _sql_root+="\nCREATE DATABASE IF NOT EXISTS \`${DB_NAME}\`;"
    _sql_root+="\nCREATE USER IF NOT EXISTS '${DB_USER}'@'localhost' IDENTIFIED BY '${SQLGLPIPWD}';"
    _sql_root+="\nGRANT ALL PRIVILEGES ON \`${DB_NAME}\`.* TO '${DB_USER}'@'localhost';"
    _sql_root+="\nGRANT SELECT ON mysql.time_zone_name TO '${DB_USER}'@'localhost';"
    _sql_root+="\nFLUSH PRIVILEGES;"
    if ! MYSQL_PWD="${SQLROOTPWD}" "${MYSQL_CMD}" -u root --batch --silent -e "${_sql_root}" mysql; then
        warn "$MSG_ERROR_TASK: base de donn√©es - √©chec des modifications en bloc" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # D√©tection du fuseau horaire
    if [ -z "${TIMEZONE:-}" ]; then
        if command -v timedatectl; then
            TIMEZONE=$(timedatectl show -p Timezone --value || true)
        fi
        if [ -z "${TIMEZONE:-}" ] && [ -f /etc/timezone ]; then
            TIMEZONE=$(sed -n '1p' /etc/timezone || true)
        fi
        if [ -z "${TIMEZONE:-}" ]; then
            if [ -L /etc/localtime ] || [ -f /etc/localtime ]; then
                tzfile=$(readlink -f /etc/localtime || true)
                case "$tzfile" in
                    */usr/share/zoneinfo/*) TIMEZONE=${tzfile#*/usr/share/zoneinfo/} ;;
                esac
            fi
        fi
        if [ -z "${TIMEZONE:-}" ] && [ -f /etc/sysconfig/clock ]; then
            TIMEZONE=$(awk -F= '/^ZONE/ {gsub(/"/,"",$2); print $2}' /etc/sysconfig/clock || true)
        fi
        TIMEZONE=${TIMEZONE:-UTC}
        export TIMEZONE
        info "Fuseau horaire d√©tect√© : ${TIMEZONE}"
    fi
    info "$MSG_TIMEZONE_CONFIG"
    if ! mysql_tzinfo_to_sql /usr/share/zoneinfo | MYSQL_PWD="${SQLROOTPWD}" "${MYSQL_CMD}" -u root mysql; then
        warn "$MSG_ERROR_TASK: import du timezone √©chou√©"
        return 1
    fi
    systemctl restart mariadb || warn "Impossible de red√©marrer MariaDB (v√©rifiez le service)"
    sleep 5
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# T√©l√©chargement et d√©compression de GLPI
function install_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    info "$MSG_DOWNLOAD_INSTALL_GLPI"
    # T√©l√©chargement de GLPI
    tmp_file="$(mktemp /tmp/glpi_XXX.tar.gz)"
    if ! wget -q -O "$tmp_file" "${DOWNLOADLINK}"; then
        warn "$MSG_DOWNLOAD_FAILED" 1>> "${ERRORFILE}"
        rm -f "$tmp_file"
        return 1
    fi
    if [ ! -d "$REP_GLPI" ]; then
        mkdir -p "$REP_GLPI" || { warn "$MSG_CREATE_DIR_FAILED"; rm -f "$tmp_file"; return 1; }
    fi
    # Extraire l'archive dans le r√©pertoire d'installation
    tar xzf "$tmp_file" --strip-components=1 -C "$REP_GLPI"
    rm -f "$tmp_file"
    sleep 5;
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Mise en place des r√©glage pour GLPI
function setup_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    source_os_release
    local CMD="${REP_GLPI}/bin/console db:install \
 --db-host localhost \
 --db-port=3306 \
 --db-name=${DB_NAME} \
 --db-user=${DB_USER} \
 --db-password=${SQLGLPIPWD} \
 --default-language=${LANGUAGE} \
 --force \
 --no-telemetry \
 --quiet \
 --no-interaction"
    info "$MSG_CONFIG_GLPI" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    mkdir -p /var/log/glpi 
    mkdir -p /etc/glpi/config 
    mkdir -p /var/lib/glpi/files 
    mv -f "${REP_GLPI}"/files /var/lib/glpi ||
    {
        warn "√âchec du d√©placement du r√©pertoire files de GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    }
    sudo tee /etc/glpi/config/local_define.php  <<'EOF'
<?php
    define('GLPI_VAR_DIR', '/var/lib/glpi/files');
    define('GLPI_LOG_DIR', '/var/log/glpi');
EOF
    sleep 1
    sudo tee "${REP_GLPI}"/inc/downstream.php  <<EOF
<?php
    define('GLPI_CONFIG_DIR', '/etc/glpi/config');
    if (file_exists(GLPI_CONFIG_DIR . '/local_define.php')) {
        require_once GLPI_CONFIG_DIR . '/local_define.php';
    }
EOF
    network_info
    if check_distro_user "${REP_GLPI}"; then
        if [[ "${WEB_USER}" == "www-data" ]]; then
            # Configuration d'Apache pour GLPI
            sudo tee /etc/apache2/sites-available/glpi.conf  <<EOF
<VirtualHost *:80>
    ServerName ${IPADRESS}
    DocumentRoot ${REP_GLPI}/public
    <Directory ${REP_GLPI}/public>
        Require all granted
        RewriteEngine On
        RewriteCond %{HTTP:Authorization} ^(.+)$
        RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^(.*)$ index.php [QSA,L]
    </Directory>
    ErrorLog /var/log/glpi/error.log
    CustomLog /var/log/glpi/access.log combined
</VirtualHost>
EOF
            phpversion=$(php -v | grep -i '(cli)' | awk '{print $2}' | cut -d. -f1,2)
            sed -i 's/^\(;\?\)\(session.cookie_httponly\).*/\2 =on/' /etc/php/"$phpversion"/apache2/php.ini
            sleep 1
            # Disable Apache Web Server Signature
            echo "ServerSignature Off" >> /etc/apache2/apache2.conf
            echo "ServerTokens Prod" >> /etc/apache2/apache2.conf
            # Activation du module rewrite d'apache
            if ! a2enmod rewrite | tee -a "${DEBUGFILE}"; then
                warn "√âchec de l'activation du module rewrite d'Apache." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # D√©activer le site par d√©faut
            if ! a2dissite 000-default.conf | tee -a "${DEBUGFILE}"; then
                warn "√âchec de la d√©sactivation du site par d√©faut d'Apache." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # Activer le site GLPI
            if ! a2ensite glpi.conf | tee -a "${DEBUGFILE}"; then
                warn "√âchec de l'activation du site GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # Recharger la configuration d'Apache
            if ! systemctl reload apache2 | tee -a "${DEBUGFILE}"; then
                warn "√âchec du rechargement d'Apache." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # Installation de GLPI en ligne de commande
            echo "$(date '+%Y-%m-%d %H:%M:%S') - [INFO] Ex√©cution : sudo -u ${WEB_USER} php ${CMD}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2) || true
            # Ex√©cuter la commande en tant que "${WEB_USER}". Utiliser sudo tee pour √©crire vers les fichiers prot√©g√©s.
            if eval sudo -u "${WEB_USER}" php "${CMD}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
                info "Installation GLPI termin√©e avec succ√®s." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            else
                warn "√âchec de l'installation GLPI via console." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # Change permissions
            if ! rights_glpi; then
                warn "√âchec de la modification des droits pour GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            if ! systemctl restart apache2; then
                warn "√âchec du red√©marrage d'Apache." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
        elif [[ "${WEB_USER}" == "nginx" ]]; then
            network_info
            sudo tee /etc/nginx/conf.d/glpi.conf << EOF
server {
    listen 80;
    server_name ${IPADRESS};
    root ${REP_GLPI}public;
    location / {
        try_files \$uri /index.php\$is_args\$args;
    }
    location ~ ^/index\.php$ {
        # the following line needs to be adapted, as it changes depending on OS distributions and PHP versions
        fastcgi_pass unix:/var/run/php-fpm/www.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME \$document_root\$fastcgi_script_name;
    }
}
EOF
            sudo tee /etc/logrotate.d/glpi << EOF
# Rotate GLPI logs daily, only if not empty
# Save 14 days old logs under compressed mode
/var/lib/glpi/files/_log/*.log {
    su nginx nginx
    daily
    rotate 14
    compress
    notifempty
    missingok
    create 644 nginx nginx
}
EOF
            chmod 0644 /etc/logrotate.d/glpi
            chown root:root /etc/logrotate.d/glpi
            chcon system_u:object_r:etc_t:s0 /etc/logrotate.d/glpi
            sed -i 's/^\(;\?\)\(session.cookie_httponly\).*/\2 = on/' /etc/php.ini
            # Change permissions
            if ! rights_glpi; then
                warn "√âchec de la modification des droits pour GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            # Recharger la configuration de Nginx
            if ! systemctl reload nginx php-fpm; then
                warn "√âchec du rechargement de Nginx ou PHP-FPM." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
            sleep 2
            # Installation de GLPI en ligne de commande
            if eval sudo -u "${WEB_USER}" "${CMD}"; then
                info "Installation GLPI termin√©e avec succ√®s." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            else
                warn "√âchec de l'installation GLPI via console." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                return 1
            fi
        fi
        # Configuration de la t√¢che Cron
        echo "*/2 * * * * ${WEB_USER} /usr/bin/php ""${REP_GLPI}""front/cron.php &>/dev/null" >> /etc/cron.d/glpi
    fi
    sleep 5
    if ! rm -Rf "${REP_GLPI}install/install.php"; then
        warn "√âchec de la suppression du script d'installation de GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    sleep 2
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Mise √† jour des mot de passe des utilisateurs de GLPI
function maj_user_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    info "${MSG_CHANGE_MDP_GLPI}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # Ensure we have a mysql client command; fallback to detecting it if not set
    local MYSQL_CMD
    MYSQL_CMD=$(command -v mysql  || command -v mariadb || echo mysql)
    # Verify mysql client exists
    if ! command -v "${MYSQL_CMD}"; then
        warn "Client mysql pas trouv√©: ${MYSQL_CMD}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # Construire la requ√™te SQL et ex√©cuter via -e
    local _sql_user
    _sql_user="USE '${DB_NAME}';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${ADMINGLPIPWD}') WHERE name = 'glpi';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${POSTGLPIPWD}') WHERE name = 'post-only';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${TECHGLPIPWD}') WHERE name = 'tech';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${NORMGLPIPWD}') WHERE name = 'normal';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${TIMEZONE}' WHERE context = 'core' AND name = 'timezone';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${LANGUAGE}' WHERE context = 'core' AND name = 'language';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${IPADRESS}' WHERE context = 'core' AND name = 'url_base';"
    echo "${_sql_user}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # Execute the SQL commands
    if ! MYSQL_PWD="${SQLGLPIPWD}" "${MYSQL_CMD}" -u "${DB_USER}" --batch --silent -e "${_sql_user}"; then
        error "$MSG_ERROR_TASK: base de donn√©es - √©chec des modifications en bloc" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
function source_os_release(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if [[ -f /etc/os-release ]]; then
        # shellcheck disable=SC1091
        . /etc/os-release
    fi
    if [[ -f /etc/lsb-release ]]; then
        # shellcheck disable=SC1091
        . /etc/lsb-release
    fi
    if [[ -z "${ID:-}" ]]; then
        ID=$(uname -s | tr '[:upper:]' '[:lower:]')
    fi
    if [[ -z "${VERSION_ID:-}" ]]; then
        VERSION_ID=$(uname -r)
    fi
    if [ -z "${ID:-}" ] || [ -z "${VERSION_ID:-}" ]; then
        warn "Variables ID ou VERSION_ID non d√©finies apr√®s sourcing de /etc/os-release" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    export ID VERSION_ID
    info "$(date '+%F %T'): INFO: OS d√©tect√© : ${ID} ${VERSION_ID}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
function rights_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # Changer les droits des r√©pertoires et fichiers
    info "$MSG_RIGHTS_GLPI" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    find "${REP_GLPI}" -type d -exec chmod 755 {} \; 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    find "${REP_GLPI}" -type f -exec chmod 644 {} \; 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # Changer le propri√©taire des r√©pertoires
    if check_distro_user "${REP_GLPI}"; then
        sudo chown -Rc "${WEB_USER}":"${WEB_USER}" /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}"
    fi
    # SELinux configuration
    if [[ "${WEB_USER}" == "nginx" ]]; then
        if command -v semanage; then
            setsebool -P httpd_can_network_connect on
            setsebool -P httpd_can_network_connect_db on
            setsebool -P httpd_can_sendmail on
            for p in "${REP_GLPI}" /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}/marketplace"; do
                semanage fcontext -a -t httpd_sys_rw_content_t "${p}(/.*)?"
            done
            restorecon -R "${REP_GLPI}" /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}/marketplace"
        else
            error "$(date '+%F %T'): WARN: semanage non disponible ‚Äî SELinux non configur√©" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        fi
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Afficher le r√©sultat final
function display_result() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    MESSAGE=""
	if [[ -f "${FICHIER_MSG}" ]]; then
        while IFS= read -r ligne; do
            MESSAGE+="${ligne}\n"
        done < "${FICHIER_MSG}"
        dialog --backtitle "${MSG_TITRE}" --title "${MSG_TITRE_OK}" --msgbox "${MESSAGE}" 0 0
    else
        while IFS= read -r ligne; do
            MESSAGE+="${ligne}\n"
        done < "${ERRORFILE}"
        dialog --backtitle "${MSG_TITRE}" --title "${MSG_TITRE_NONOK}" --msgbox "${MSG_NONOK}\n\n${MSG_ERROR_FICHIER_MSG}" 0 0
        exit 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Ecriture du fichier pour sauvegarder les mot de passe du serveur GLPI
function write_credentials(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if [[ "${LANGUAGE}" == "fr_FR" ]]; then
        cat > "$FICHIER_MSG" << EOF
<==========================> D√©tails de l'installation de GLPI <=================================>
 GLPI Version: ${VERSION_SELECT}
 R√©pertoire d'installation de GLPI: ${REP_GLPI}

 Les comptes utilisateurs par d√©faut sont :
 UTILISATEUR   -  MOT DE PASSE       -       ACCES
  glpi         -  ${ADMINGLPIPWD}     -  compte admin
  post-only    -  ${POSTGLPIPWD}     -  compte post-only
  tech         -  ${TECHGLPIPWD}     -  compte tech
  normal       -  ${NORMGLPIPWD}     -  compte normal

 Vous pouvez acc√©der √† la page web de GLPI √† partir d'une adresse IP ou d'un nom d'h√¥te :
 http://${DB_HOST}

 ==> Base de donn√©es:
 H√¥te de la base de donn√©es: ${DB_HOST}
 Port de la base de donn√©es: 3306
 Nom de la base de donn√©es GLPI: ${DB_NAME}
 Mot de passe root: ${SQLROOTPWD}
 Mot de passe ${DB_USER}: ${SQLGLPIPWD}

 Fichier de sauvegarde enregistr√© dans ${FICHIER_MSG}
 <===============================================================================================>

 Si vous rencontrez un probl√©me avec ce script, veuillez le signaler sur GitHub : https://github.com/PapyPoc/glpi_install/issues
EOF
	else
		cat > "$FICHIER_MSG" << EOF
<=============================> GLPI installation details <=====================================>
 GLPI version: ${VERSION_SELECT}
 GLPI installation directory: ${REP_GLPI}

 The default user accounts are:
    USER         -    PASSWORD        -       ACCESS
  glpi           -  ${ADMINGLPIPWD}      -  admin account
  post-only      -  ${POSTGLPIPWD}      -  post-only account
  tech           -  ${TECHGLPIPWD}      -  tech account
  normal         -  ${NORMGLPIPWD}      -  normal account

 You can access the GLPI web page from the following address :
 http://${DB_HOST}

 ==> Database:
 Database host: ${DB_HOST}
 Database port: 3306
 GLPI database name: ${DB_NAME}
 Root password: ${SQLROOTPWD}
 ${DB_USER} password: ${SQLGLPIPWD}

 Backup file saved to ${FICHIER_MSG}
 <===============================================================================================>

 If you encounter a problem with this script, please report it on GitHub : https://github.com/PapyPoc/glpi_install/issues
EOF
	fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Fonction principale pour ex√©cuter les t√¢ches avec barre de progression
function update() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    declare -A tasks=(
        ["$MSG_T20"]="maintenance 1"
        ["$MSG_T21"]="update_distro"
        ["$MSG_T22"]="backup_glpi"
        ["$MSG_T23"]="install_glpi"
        ["$MSG_T24"]="update_glpi"
        ["$MSG_T25"]="maintenance 0"
    )
    task_order=("$MSG_T20" "$MSG_T21" "$MSG_T22" "$MSG_T23" "$MSG_T24" "$MSG_T25")
    total_tasks=${#task_order[@]}
    task_index=0
    (
        for task_key in "${task_order[@]}"; do
            task_index=$((task_index + 1))
            progress=$((task_index * 100 / total_tasks))
            echo "$progress"
            echo "XXX"
            echo "$task_index/$total_tasks - $task_key"
            echo "XXX"
            if run_task "$task_key" "${tasks[$task_key]}" "$task_index" "$total_tasks"; then
                echo "$progress"
                echo "XXX"
                echo "$task_index/$total_tasks - $task_key : ${MSG_OK}"
                echo "XXX"
            else
                echo "100"
                echo "XXX"
                echo "$task_index/$total_tasks - $task_key : ${MSG_NONOK}"
                echo "XXX"
                return 1   # <-- remonte l'erreur au parent
            fi
            sleep 0.5
        done
    ) | dialog --backtitle "$MSG_TITRE" --title "$MSG_TITRE_GAUGE" --gauge "" 8 120
    # R√©cup√©rer le code de retour du sous-shell
    if [ ${PIPESTATUS[0]} -ne 0 ]; then
    warn "Une t√¢che a √©chou√© pendant l'ex√©cution de update()." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    info "Toutes les t√¢ches ont √©t√© ex√©cut√©es avec succ√®s." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Activ√© ou d√©activ√© le mode maintenance (1 ou 0)
function maintenance(){ 
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    check_distro_user "${REP_GLPI}"
    if [ "$1" == "1" ]; then
        info "${MSG_ACTIVE_SERVICE}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        sudo -u "${WEB_USER}" php "${REP_GLPI}"bin/console glpi:maintenance:enable
    elif [ "$1" == "0" ]; then
        info "${MSG_DEACTIVE_SERVICE}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        sudo -u "${WEB_USER}" php "${REP_GLPI}"bin/console glpi:maintenance:disable 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)   
    fi
	sleep 2;
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Sauvegarde de la base de donn√©e et des fichiers de GLPI
function backup_glpi() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    info "=== D√©marrage de la sauvegarde GLPI ===" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # V√©rification pr√©liminaire
    if [ -z "${REP_GLPI}" ] || [ -z "${REP_BACKUP_COMPRESS}" ] || [ -z "${INVOKING_HOME}" ]; then
    warn "Variables d'environnement manquantes (REP_GLPI, REP_BACKUP_COMPRESS, INVOKING_HOME)" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # Lecture des informations MySQL
    local DB_NAME PASSWORD
    DB_NAME=$(sed -n 's/.*\(Nom de la base de donn√©es GLPI\|GLPI database name\): \([^ ]*\).*/\2/p' "${INVOKING_HOME}/sauve_mdp.txt")
    PASSWORD=$(sed -n 's/.*\(Mot de passe root\|Root password\): \([^ ]*\).*/\2/p' "${INVOKING_HOME}/sauve_mdp.txt")
    if [ -z "${DB_NAME}" ] || [ -z "${PASSWORD}" ]; then
    warn "Impossible de lire le nom de base ou le mot de passe depuis sauve_mdp.txt" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # D√©termination de l‚Äôoutil de dump
    local MYSQLDUMP_CMD
    MYSQLDUMP_CMD=$(command -v mysqldump 2>/dev/null || command -v mariadb-dump 2>/dev/null || echo mysqldump)
    # R√©pertoires de sauvegarde
    local BDD_BACKUP REP_BACKUP 
    REP_BACKUP="${INVOKING_HOME}/backup_glpi_$(date +"%Y-%m-%d")"
    BDD_BACKUP="bdd_glpi_$(date +"%Y-%m-%d_%H-%M-%S").sql"
    if ! mkdir -p "${REP_BACKUP}"; then
        warn "√âchec de la cr√©ation du r√©pertoire de sauvegarde : ${REP_BACKUP}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # --- Sauvegarde BDD ---
    info "${MSG_MYSQL_DUMP}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if eval "${MYSQLDUMP_CMD} -u root -p\"${PASSWORD}\" --databases \"${DB_NAME}\" > \"${REP_BACKUP}/${BDD_BACKUP}\" \
    1> >(tee -a \"${DEBUGFILE}\") 2> >(tee -a \"${ERRORFILE}\" >&2)"; then
        info "${MSG_DUMP_SUCCESS}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    else
    warn "√âchec de la sauvegarde de la base ${DB_NAME}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # --- Sauvegarde des fichiers ---
    info "${MSG_SITE_COPY}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    for SRC in "/etc/glpi/config" "/var/lib/glpi/files" "${REP_GLPI}/plugins" "${REP_GLPI}/marketplace" "${REP_GLPI}/inc/downstream.php"; do
        if [ -e "${SRC}" ]; then
            cp -Rf "${SRC}" "${REP_BACKUP}/"
        else
            warn "Source manquante : ${SRC}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        fi
    done
    info "${MSG_SITE_COPY_OK}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # --- Compression ---
    info "${MSG_COMPRESS_BACKUP}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    mkdir -p "${REP_BACKUP_COMPRESS}"
    local BACKUP_FILE; BACKUP_FILE="${REP_BACKUP_COMPRESS}/backup_glpi_$(date +"%Y-%m-%d_%H-%M-%S").tar.gz"
    if tar -czf "${BACKUP_FILE}" -C "${REP_BACKUP}" . 2>> "${ERRORFILE}"; then
        info "${MSG_COMPRESS_BACKUP_OK} (${BACKUP_FILE})" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        # V√©rifier que le fichier compress√© n'est pas vide
        if [ ! -s "${BACKUP_FILE}" ]; then
            warn "Fichier de sauvegarde vide, suppression annul√©e." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            return 1
        fi
        # Suppression s√©curis√©e de l‚Äôancien GLPI
        info "${MSG_REMOVE_OLD_GLPI_DIR}"
        if [ -n "${REP_GLPI}" ] && [ -d "${REP_GLPI}" ]; then
            rm -rf "${REP_GLPI:?}/"
            info "R√©pertoire ${REP_GLPI} supprim√©." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        else
            warn "R√©pertoire GLPI introuvable : ${REP_GLPI}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        fi
    else
    warn "${MSG_COMPRESS_BACKUP_FAILED}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    info "=== Sauvegarde GLPI termin√©e avec succ√®s ===" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    sleep 2
    export REP_BACKUP
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}
# Mise √† jour de GLPI
function update_glpi() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    info "=== D√©but de la mise √† jour GLPI ===" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    # V√©rification de base
    if [ -z "${REP_BACKUP}" ] || [ -z "${REP_GLPI}" ]; then
    warn "Variables REP_BACKUP ou REP_GLPI non d√©finies, arr√™t de la mise √† jour." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        return 1
    fi
    # Restauration des fichiers de configuration et des plugins
    info "${MSG_RESTORE_FILES}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    for DIR in config files plugins marketplace; do
        SRC="${REP_BACKUP}/${DIR}"
        if [ -d "${SRC}" ]; then
            case "${DIR}" in
                config) DEST="/etc/glpi/config" ;;
                files) DEST="/var/lib/glpi/files" ;;
                plugins) DEST="${REP_GLPI}/plugins" ;;
                marketplace) DEST="${REP_GLPI}/marketplace" ;;
            esac
            mkdir -p "${DEST}"
            if compgen -G "${SRC}/*" > /dev/null; then
                if cp -Rf "${SRC}/"* "${DEST}/" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
                    info "Restauration de ${DIR} vers ${DEST} termin√©e." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                else
                    warn "Erreur lors de la copie de ${DIR}." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
                fi
            else
                warn "R√©pertoire ${SRC} vide, rien √† copier." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
            fi
        fi
    done
    # Restauration du fichier downstream.php
    info "Restauration du fichier downstream.php si pr√©sent." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if [ -f "${REP_BACKUP}/inc/downstream.php" ]; then
        mkdir -p "${REP_GLPI}/inc"
        if cp -Rf "${REP_BACKUP}/inc/downstream.php" "${REP_GLPI}/inc/" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            info "Fichier downstream.php restaur√©." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        else
            warn "Erreur lors de la restauration de downstream.php." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        fi
    fi
    # Suppression de la sauvegarde
    info "${MSG_REMOVE_OLD_FILES}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    info "${MSG_REMOVE_OLD_FILES}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    if [ -d "${REP_BACKUP}" ]; then
        rm -rf "${REP_BACKUP:?}"
        info "R√©pertoire ${REP_BACKUP} supprim√© avec succ√®s." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    else
        warn "R√©pertoire ${REP_BACKUP} introuvable." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    fi
    # Mise √† jour de la base GLPI
    info "${MSG_UPDATE_GLPI_DATABASE}"
    rights_glpi
    if check_distro_user "${REP_GLPI}"; then
        if sudo -u "${WEB_USER}" php "${REP_GLPI}/bin/console" db:update --quiet --no-interaction --force 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2); then
            dialog --backtitle "${MSG_TITRE}" --title "${MSG_TITRE_OK}" --msgbox "${MSG_UPDATE_GLPI_DATABASE_OK}" 0 0
            info "Mise √† jour de la base GLPI r√©ussie." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        else
            warn "√âchec de la mise √† jour de la base GLPI." 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
        fi
    fi
    # Nettoyage final
    info "${MSG_UPDATE_CLEAN}"
    rm -f "${REP_GLPI}/install/install.php" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    rm -rf "${REP_BACKUP}/backup_glpi" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)

    info "=== Fin de la mise √† jour GLPI ===" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
    sleep 2
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1> >(tee -a "${DEBUGFILE}") 2> >(tee -a "${ERRORFILE}" >&2)
}