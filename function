#!/usr/bin/env bash
#
# GLPI install script
# Author: PapyPoc
# Version: 1.8.0
# Function file
#
# set -Eeuo pipefail
# Ne pas continuer si le script est exécuté directement

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    echo -e "Ce fichier doit être sourcé, pas exécuté.\n">> "${ERRORFILE}"
    return 1
fi
# Affichage d'erreur en rouge
function error(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${ROUGE}${expanded}${NC}" # Couleur rouge
}
# Affichage d'alerte en orange
function warn(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${ORANGE}${expanded}${NC}" # Couleur orange
}
# Affichage d'information en bleu
function info(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${CYAN}${expanded}${NC}" # Couleur cyan
}
# Affichage debug en normal
function debug(){
    local msg="$1"
    export_display_env
    local expanded
    if command -v envsubst >/dev/null 2>&1; then
        expanded=$( ( set +u; printf '%s' "$msg" | envsubst ) )
    else
        expanded=$( ( set +u; eval "printf '%s' \"$msg\"" ) )
    fi
    echo -e "${NC}${expanded}${NC}" # Couleur normale
}
# Exporter une liste blanche de variables utilisées dans les fichiers de langue pour que envsubst puisse les remplacer
function export_display_env() {
    # Exporter un ensemble complet de variables (majuscules et minuscules)
    # pouvant être référencées comme espaces réservés dans les fichiers de langue.
    # Les valeurs par défaut sont vides si elles ne sont pas définies.
    local vars_maj=(
        ORIG_USER ADMIN_GROUP ID VERSION_ID ID NAME PRETTY_NAME MSG_NONOK NEW_VERSION REP_GLPI FICHIER_MSG
        ERRORFILE LOGFILE TASK_INDEX TASK_KEY LANGUAGE TIMEZONE IPADRESS INTERFACE DOWNLOADLINK
        DB_USER DB_NAME SQLROOTPWD SQLGLPIPWD ADMINGLPIPWD POSTGLPIPWD TECHGLPIPWD NORMGLPIPWD
        REP_BACKUP BDD_BACKUP REP_SCRIPT MYSQL_CMD MYSQLDUMP_CMD OUTPUT GLPI_CLI_VERSION PHPVERSION
        DEBIAN_VERSIONS UBUNTU_VERSIONS ALMA_VERSIONS CENTOS_VERSIONS ROCKY_VERSIONS REDHAT_VERSIONS MSG_UPGRADE_DISTRO
        NEW_VERSION TAGS VERSION_SELECT
    )
    local vars_min=(
        orig_user admin_group id version_id id name pretty_name msg_nonok new_version rep_glpi fichier_msg
        errorfile logfile task_index task_key language timezone ipadress interface downloadlink
        db_user db_name sqlrootpwd sqlglpipwd adminglpipwd postglpipwd techglpipwd normglpipwd
        rep_backup bdd_backup rep_script mysql_cmd mysqldump_cmd output glpi_cli_version phpversion
        debian_versions ubuntu_versions alma_versions centos_versions rocky_versions redhat_versions msg_upgrade_distro
        new_version tags version_select
    )
    local v _val
    for v in "${vars_maj[@]}" "${vars_min[@]}"; do
        _val="${!v:-}"
        export "$v"="$_val"
    done
}
# Gestion des erreurs avec trap
function on_error() {
    local rc=$?
    local cmd=$BASH_COMMAND
    local line=${BASH_LINENO[0]}

    echo "Erreur détectée : '${cmd}' (code=$rc) à la ligne $line" | tee -a "$ERRORFILE" >&2
    echo "Pile d’appels :" >> "$ERRORFILE"
    for ((i=${#FUNCNAME[@]}-1; i>=0; i--)); do
        echo "  ↳ ${FUNCNAME[$i]}() depuis ${BASH_SOURCE[$i]}:${BASH_LINENO[$((i-1))]}" >> "$ERRORFILE"
    done
    echo "──────────────────────────────" >> "$ERRORFILE"

    dialog --msgbox "Une erreur est survenue.\n\nCommande : ${cmd}\nCode : ${rc}\n\nConsultez $ERRORFILE pour plus d’informations." 40 90 || true
    exit "$rc"
}
trap 'on_error' ERR
# Exécuter une tâche et gérer les erreurs et les logs
function run_task() {
    debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" >>"${LOGFILE}"
    # Définir les variables de tâche
    local task_key="$1" task_cmd="$2" index="$3" total="$4"
    # Afficher les informations de la tâche
    info "Tâche: $index/$total - $task_key"
    info "$MSG_COMMAND: $task_cmd"
    echo "$(date '+%Y-%m-%d %H:%M:%S'): START: $task_cmd" | tee -a "$LOGFILE"
    # --- Exécution de la commande ---
    local output exit_code
    output=$(eval "$task_cmd" 2>&1)
    exit_code=$?
    # --- Résultat ---
    if (( exit_code == 0 )); then
        echo "$(date '+%Y-%m-%d %H:%M:%S'): SUCCESS: $task_cmd" | tee -a "$LOGFILE"
        echo "$output" | tee -a "$LOGFILE"
    else
        echo "$(date '+%Y-%m-%d %H:%M:%S'): ERROR: $task_cmd" | tee -a "$LOGFILE"
        echo "$output" | tee -a "$ERRORFILE"
        warn "$MSG_ERROR_TASK: $task_key (exit=$exit_code)" | tee -a "$ERRORFILE"
        debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Fin (échec) de ${FUNCNAME[1]:-main}" >>"${LOGFILE}"
        return $exit_code
    fi
    debug "$(date '+%F %T') [PID:$$][DEBUG:${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" >>"${LOGFILE}"
    return 0
    #local task_key="$1"
    #local task_cmd="$2"
    #local index="$3"
    #local total="$4"
    #info "Tâche: $index/$total - $task_key"
    #info "$MSG_COMMAND: $task_cmd"
    #debug "$(date '+%F %T') [INFO] START: $task_cmd" 1 1>>"${LOGFILE}"
    #local output
    #output=$(eval "$task_cmd" )
    #local exit_code=$?
    #echo "Code d'exit : $exit_code" 1>> "${LOGFILE}"
    #if [[ $exit_code -eq 0 ]]; then
    #    info "$(date '+%F %T') [INFO] SUCCESS: $task_cmd" 1>> "${LOGFILE}"
    #    echo "$output" 1>> "${LOGFILE}"
    #elif [[ $exit_code -ne 0 ]]; then
    #    error "$(date '+%F %T') [ERROR] $MSG_ERROR_TASK: $task_key (exit=$exit_code)" 1>> "${ERRORFILE}"
    #    echo "$output" 2>> "${ERRORFILE}"
    #    return 1
    #fi
}
# Vérifie si la distribution est prise en compte pour l'installation de GLPI
function check_distro(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>> "${LOGFILE}"
    # Vérifie si le fichier os-release existe
    source_os_release
    # Vérifie si la distribution est basée sur Debian, Ubuntu, Alma Linux, Centos ou Rocky Linux
    if [[ "${ID}" =~ ^(debian|ubuntu|almalinux|centos|rocky|rhel)$ ]]; then
        if compatible "$VERSION_ID" DEBIAN_VERSIONS || compatible "$VERSION_ID" UBUNTU_VERSIONS || compatible "$VERSION_ID" ALMA_VERSIONS || compatible "$VERSION_ID" CENTOS_VERSIONS || compatible "$VERSION_ID" ROCKY_VERSIONS || compatible "$VERSION_ID" REDHAT_VERSIONS; then
            info "$MSG_DISTRO_OK" 1>> "${LOGFILE}"
            return 0
        else
            warn "$MSG_DISTRO_NONOK"  1>>"${LOGFILE}"
            warn "$MSG_FORCE_DISTRO"  1>>"${LOGFILE}"
            if [ -t 0 ]; then
                info "$MSG_FORCE_DISTRO_QUESTION"
                read -r RESPONSE
                case $RESPONSE in
                    O|o|Y|y)
                        info "$MSG_CONTINUING" 1>> "${LOGFILE}"
                        ;;
                    N|n)
                        info "$MSG_EXITING" 1>> "${LOGFILE}"
                        return 1
                        ;;
                    *)
                        warn "$MSG_INVALID_ANSWER"  1>>"${LOGFILE}"
                        return 1
                        ;;
                esac
            else
                warn "$MSG_SCRIPT_NON_INTERACTIVE_DISTRO"  1>>"${LOGFILE}"
                return 1
            fi
        fi
        export VERSION_ID ID
    else
        warn "$MSG_DISTRO_INVALID"  1>>"${LOGFILE}"
        return 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Chargement du fichier de langue
function load_language() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    local syslang="${LC_ALL:-${LANG:-}}"
    if [[ $syslang =~ ^fr ]]; then
        LANG_FILE="$REP_SCRIPT/lang/fr_lang.ini"
        LANGUAGE="fr_FR"
    else
        LANG_FILE="$REP_SCRIPT/lang/en_lang.ini"
        LANGUAGE="en_US"
    fi
    if [[ -f $LANG_FILE ]]; then
        # Ensure environment variables used in messages are exported for envsubst
        export_display_env
    # Lire le fichier ligne par ligne, gérer CRLF, commentaires, sections
    # et valeurs entre guillemets
        while IFS= read -r line || [ -n "$line" ]; do
            # supprimer CR si présent (fichiers format Windows)
            line="${line%%$'\r'}"
            # skip empty lines and comments
            # supprimer les espaces de tête
            trimmed="${line#"${line%%[![:space:]]*}"}"
            if [ -z "$trimmed" ]; then
                continue
            fi
            case "$trimmed" in
                "#"* | ";"*)
                    continue
                    ;;
            esac
            # ignorer les entêtes de section
            [[ $line =~ ^[[:space:]]*\[.*\] ]] && continue
            if [[ $line =~ ^[[:space:]]*([^=[:space:]]+)[[:space:]]*=(.*)$ ]]; then
                local key="${BASH_REMATCH[1]}"
                local value="${BASH_REMATCH[2]}"
                # trim leading/trailing whitespace from value
                value="${value#"${value%%[![:space:]]*}"}"
                value="${value%"${value##*[![:space:]]}"}"
                # remove surrounding single or double quotes if present
                if [[ $value =~ ^\'(.*)\'$ ]]; then
                    value="${BASH_REMATCH[1]}"
                elif [[ $value =~ ^\"(.*)\"$ ]]; then
                    value="${BASH_REMATCH[1]}"
                fi
                # Développer les espaces réservés dans la valeur avec envsubst
                # (préféré) ou utiliser eval en secours
                local expanded_value
                if command -v envsubst >/dev/null 2>&1; then
                    # envsubst reads from the environment, so ensure variables are exported
                    expanded_value=$( ( set +u; printf '%s' "$value" | envsubst ) )
                else
                    # fallback : effectuer l'expansion de paramètres en toute sécurité
                    # (autoriser les variables non définies)
                    expanded_value=$( ( set +u; eval "printf '%s' \"$value\"" ) )
                fi
                # affecter en toute sécurité à une variable nommée par $key
                printf -v "$key" '%s' "$expanded_value"
            fi
        done < "$LANG_FILE"
        info "$MSG_LANG_LOADED ($LANGUAGE)"
    else
        warn "Language file not found: $LANG_FILE"
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Valide le répertoire d’installation de GLPI
function validate_glpi_path() {
    : "${BASH_VERSION:?Ce script doit être exécuté avec bash}"
    local path="$1"
    local clean_path
    # Nettoyage
    clean_path="$(printf '%s' "$path" | tr -d '\r\n' | sed -E 's#/{2,}#/#g' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    # Vérification du format
    if ! [[ "$clean_path" =~ ^(/var/www|/srv|/opt|/usr/share)/[^[:space:]]*glpi[^[:space:]]*$ ]]; then
        dialog --msgbox "Répertoire d’installation invalide : ${clean_path}\n\nDoit commencer par /var/www/, /srv/, /opt/ ou /usr/share/\n   et contenir 'glpi' dans le nom d’un dossier." 12 70
        warn "Validation échouée : répertoire d’installation invalide (${clean_path})"
        return 1
    fi
    return 0
}
# Valide le répertoire d’installation de GLPI
function validate_db_host() {
    host=$1
    # 1️⃣ Nettoyage de base
    clean_host=$(printf '%s' "$host" \
        | tr -d '\r' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')
    # 2️⃣ Cas simples
    case "$clean_host" in
        localhost|::1|\[::1\])
            return 0 ;;
    esac
    # 3️⃣ Vérif IPv4 (structure correcte)
    if printf '%s\n' "$clean_host" | grep -Eq '^([0-9]{1,3}\.){3}[0-9]{1,3}$'; then
        IFS=.
        set -- $clean_host
        for o in "$@"; do
            case $o in
                *[!0-9]*) dbhost_err "$clean_host"; return 1 ;;
            esac
            [ "$o" -ge 0 ] 2>/dev/null && [ "$o" -le 255 ] 2>/dev/null || {
                dbhost_err "$clean_host"; return 1;
            }
        done
        return 0
    fi
    # 4️⃣ Vérif nom de domaine (FQDN simple)
    if printf '%s\n' "$clean_host" | grep -Eq '^([A-Za-z0-9]([A-Za-z0-9-]{0,61}[A-Za-z0-9])?\.)+[A-Za-z]{2,}$'; then
        return 0
    fi
    # 5️⃣ Sinon invalide
    dbhost_err "$clean_host"
    return 1
}
# 🔧 Helper message d'erreur + log
function dbhost_err() {
    v=$1
    dialog --msgbox "Hôte de base de données invalide : ${v}\n\nAutorisé : localhost, ::1/[::1], nom de domaine complet ou adresse IPv4." 10 70
    warn "Validation échouée : hôte DB invalide (${v})"
}
# Valide le nom de la base de données
function validate_db_name() {
    local name="$1"
    local clean_name
    clean_name="$(printf '%s' "$name" | tr -d '\r\n' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    if [[ "$clean_name" =~ ^[A-Za-z_][A-Za-z0-9_]{0,63}$ ]]; then
        return 0
    else
        dialog --msgbox "Nom de base de données invalide : ${clean_name}\n\nDoit commencer par une lettre ou un underscore (_)\n   et contenir uniquement lettres, chiffres ou underscores (max 64 caractères)." 12 70
        warn "Validation échouée : nom de base invalide (${clean_name})"
        return 1
    fi
}
# Valide le nom d’utilisateur de la base de données
function validate_db_user() {
    local user="$1"
    local clean_user
    clean_user="$(printf '%s' "$user" | tr -d '\r\n' \
        | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')"
    if [[ "$clean_user" == "root" ]]; then
        dialog --msgbox "Nom d’utilisateur invalide : ${clean_user}\n\nL’utilisateur de la base de données ne peut pas être 'root'." 10 70
        warn "Validation échouée : utilisateur 'root' interdit"
        return 1
    fi
    if [[ "$clean_user" =~ ^[A-Za-z_][A-Za-z0-9_]*$ ]]; then
        return 0
    else
        dialog --msgbox "Nom d’utilisateur invalide : ${clean_user}\n\nDoit commencer par une lettre ou un underscore (_)\n   et contenir uniquement lettres, chiffres ou underscores." 10 70
        warn "Validation échouée : utilisateur invalide (${clean_user})"
        return 1
    fi
}
# Demander à l'utilisateur de choisir la version de GLPI (16 dernières), le répertoire d'installation, le nom de la base et l'utilisateur BDD via dialog
function prompt_install_options(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Début de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    clear
    local tags="" installed_version="" installed_dir=""
    installed_dir=$(find /var/www -type f -name 'console' -print -quit 2>/dev/null)
    if [ -n "${installed_dir}" ]; then
        if grep -qi "glpi" "$installed_dir"; then
            # Déterminer le répertoire racine de GLPI
            #local installed_root
            installed_root=$(dirname "$(dirname "${installed_dir}")")
            installed_version=$(ls "${installed_root}"/version 2>/dev/null || true)
            installed_version="${installed_version//[[:space:]]/}"
            # Normaliser avec slash final
            REP_GLPI="${installed_root%/}/"
        else
            dialog --title "${MSG_INFO}" --msgbox "Erreur : le fichier '${installed_dir}' ne semble pas appartenir à GLPI." 7 60
            return 1
        fi
    fi
    local api_url
    api_url="https://api.github.com/repos/glpi-project/glpi/tags"
    #local tags
    tags=$(curl -s "${api_url}" | jq -r '.[].name' | grep -E '^[0-9]+\.[0-9]+\.[0-9]+$' | sort -Vr | uniq | head -n 16)
    if [ -n "${tags}" ]; then
        if [ -n "${installed_version}" ]; then
            tags=$(printf '%s\n' "${tags}" | sort -V | awk -v v="${installed_version}" '
                function version_gt(a,b,   i, n1,n2,part1,part2) {
                    n1 = split(a, parts1, ".")
                    n2 = split(b, parts2, ".")
                    for (i = 1; i <= (n1 > n2 ? n1 : n2); i++) {
                        part1 = parts1[i] + 0
                        part2 = parts2[i] + 0
                        if (part1 > part2) return 1
                        if (part1 < part2) return 0
                    }
                    return 0
                }
                version_gt($0, v)
            ' | sort -Vr | head -n 16)
        else
            tags=$(printf '%s\n' "${tags}" | sort -Vr | uniq | head -n 16)
        fi
    else
        dialog --title "${MSG_INFO}" --msgbox "${MSG_GITHUB_VERSIONS_FAILED}" 7 60
        warn "${MSG_GITHUB_VERSIONS_FAILED}"
        return 1
    fi
    local args=() first=ON number=1 version_map=()
    while IFS= read -r tag; do
        args+=("${number}" "GLPI ${tag}" "${first}")
        version_map+=("${tag}")
        first=OFF
        number=$((number + 1))
    done <<< "${tags}"
    exec 3>&1
    VERSION_SELECT=$(dialog --backtitle "$MSG_TITRE" --title "${MSG_PARAM_VERSION}" --clear \
    --radiolist "${MSG_PARAM_VERSION_CHOIX}" 23 50 8 "${args[@]}" 3>&1 1>&2 2>&3)
    local rc=$?
    exec 3>&-
    if [ "${rc}" -ne 0 ]; then
        warn "Sélection de la version annulée."
        return 1
    fi
    # VERSION_SELECT retourne le tag choisi (ici nous utilisons des tags numériques mapping -> version_map)
    if ! [[ "${VERSION_SELECT}" =~ ^[0-9]+$ ]]; then
        warn "Valeur de version invalide retournée : ${VERSION_SELECT}"
        return 1
    fi
    local index=$((VERSION_SELECT - 1))
    if [ $index -lt 0 ] || [ $index -ge ${#version_map[@]} ]; then
        warn "Index de version hors plage : ${index}"
        return 1
    fi
    index=$((VERSION_SELECT - 1))
    VERSION_SELECT="${version_map[$index]}"
     WIDTH_REP=$(( ${#MSG_PARAM_REP} ))
     WIDTH_DB_HOST=$(( ${#MSG_PARAM_DB_HOST} ))
     WIDTH_DB_NAME=$(( ${#MSG_PARAM_DB_NAME} ))
     WIDTH_DB_USER=$(( ${#MSG_PARAM_DB_USER} ))
     WIDTH=$(( WIDTH_REP > WIDTH_DB_HOST ? WIDTH_REP : WIDTH_DB_HOST ))
     WIDTH=$(( WIDTH > WIDTH_DB_NAME ? WIDTH : WIDTH_DB_NAME ))
     WIDTH=$(( WIDTH > WIDTH_DB_USER ? WIDTH : WIDTH_DB_USER ))
     WIDTH=$(( WIDTH + 6 ))
     form
     IFS
     rep_glpi db_host db_name db_user
     _def_rep="${REP_GLPI:-/var/www/html/glpi/}" _def_db_host="${DB_HOST:-localhost}" _def_db="${DB_NAME:-glpi}" _def_user="${DB_USER:-glpi_user}"
    while true; do
        exec 3>&1
        form=$(dialog --backtitle "$MSG_TITRE" --title "$MSG_PARAM_TITLE" --clear \
            --form "${MSG_GLPI_SELECT_PARAM_1} ${VERSION_SELECT} ${MSG_GLPI_SELECT_PARAM_2}" 18 68 8 \
            "📁 ${MSG_PARAM_REP}"     1 2 "${REP_GLPI:-/var/www/html/glpi/}" 1 ${WIDTH} 20 40 \
            "🗄️ ${MSG_PARAM_DB_HOST}" 3 2 "${DB_HOST:-localhost}"            3 ${WIDTH} 20 20 \
            "💾 ${MSG_PARAM_DB_NAME}" 5 2 "${DB_NAME:-glpi}"                 5 ${WIDTH} 20 20 \
            "👤 ${MSG_PARAM_DB_USER}" 7 2 "${DB_USER:-glpi_user}"            7 ${WIDTH} 20 20 \
            2>&1 1>&3)
        rc=$?
        exec 3>&-
        # Transformer les lignes du formulaire en variables
        IFS=$'\n' read -r rep_glpi db_host db_name db_user <<< "$form"
        rep_glpi="${rep_glpi#"${rep_glpi%%[![:space:]]*}"}"; rep_glpi="${rep_glpi%"${rep_glpi##*[![:space:]]}"}"
        db_host="${db_host#"${db_host%%[![:space:]]*}"}"; db_host="${db_host%"${db_host##*[![:space:]]}"}"
        db_name="${db_name#"${db_name%%[![:space:]]*}"}"; db_name="${db_name%"${db_name##*[![:space:]]}"}"
        db_user="${db_user#"${db_user%%[![:space:]]*}"}"; db_user="${db_user%"${db_user##*[![:space:]]}"}"
        rep_glpi="${rep_glpi//[^A-Za-z0-9_\/.-]/_}"
        db_host="${db_host//[^A-Za-z0-9_\/.-]/_}"
        db_name="${db_name//[^A-Za-z0-9_]/_}"
        db_user="${db_user//[^A-Za-z0-9_]/_}"
        [ -z "$rep_glpi" ] && rep_glpi="$_def_rep"
        [ -z "$db_host" ] && db_host="$_def_db_host"
        [ -z "$db_name" ] && db_name="$_def_db"
        [ -z "$db_user" ] && db_user="$_def_user"
        if [[ ! "$db_name" =~ ^[A-Za-z_][A-Za-z0-9_]*$ ]]; then
            db_name="glpi_${db_name}"
        fi
        rep_glpi="${rep_glpi//\\//}"
        if [ -z "${rep_glpi}" ] || [[ "${rep_glpi}" != /* ]]; then
            rep_glpi="${_def_rep}"
        fi
        rep_glpi="$(printf '%s' "${rep_glpi}" | sed -E 's#/{2,}#/#g')"
        REP_GLPI="${rep_glpi%/}/"
        DB_HOST="$db_host"
        DB_NAME="$db_name"
        DB_USER="$db_user"
        # Si annulation ou ESC
        if [[ $rc -ne 0 ]]; then
            warn "Formulaire annulé par l’utilisateur." 1>>"${LOGFILE}"
            dialog --title "${MSG_INFO}" --msgbox "Installation annulée par l'utilisateur." 7 60
            exit 1
        fi
        # --- VALIDATIONS ---
        # Répertoire d’installation
        if ! validate_glpi_path "$REP_GLPI"; then
            continue
        fi
        # Hôte de la base de données
        if ! validate_db_host "$DB_HOST"; then
            continue
        fi
        # Nom de la base de données
        if ! validate_db_name "$DB_NAME"; then
            continue
        fi
        # Utilisateur de la base de données
        if ! validate_db_user "$DB_USER"; then
            continue
        fi
        # Si tout est valide
        break
    done
    # Assignation des valeurs finales
    DOWNLOADLINK="https://github.com/glpi-project/glpi/releases/download/${VERSION_SELECT}/glpi-${VERSION_SELECT}.tgz"
    export DB_HOST REP_GLPI DB_NAME DB_USER DOWNLOADLINK tags
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Vérifie si la version est compatible
function compatible() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    local version="$1"
    local -n versions_array="$2"
    [[ ${versions_array[*]} =~ ${version} ]]
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Vérifie si GLPI est installé ou pas
function check_install() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    local FIND_REP_GLPI=""
    local installed_version=""
    local version_file=""
    local FIND_REP_GLPI_LIST=""
    # Recherche des installations GLPI existantes
    for path in /var/www /srv /opt /usr/share; do
        FOUND=$(find "$path" -maxdepth 3 -type d -name "glpi" 2>/dev/null)
        [[ -n "$FOUND" ]] && FIND_REP_GLPI_LIST+="$FOUND"$'\n'
    done
    # Si plusieurs répertoires GLPI trouvés, demander à l'utilisateur de choisir
    if [[ -n "$FIND_REP_GLPI_LIST" ]]; then
        IFS=$'\n' read -r -d '' -a glpi_dirs <<< "$(printf '%s\0' "$FIND_REP_GLPI_LIST")"
        if [[ ${#glpi_dirs[@]} -gt 1 ]]; then
            # Préparer les arguments pour dialog
            args=()
            number=1
            first="ON"
            for dir in "${glpi_dirs[@]}"; do
                args+=("$number" "$dir" "$first")
                first="OFF"
                ((number++))
            done
            exec 3>&1
            local selection
            selection=$(dialog --backtitle "$MSG_TITRE" --title "${MSG_GLPI_SELECT_INSTALLED}" --clear \
            --radiolist "${MSG_GLPI_SELECT_INSTALLED_CHOIX}" 20 70 8 "${args[@]}" 3>&1 1>&2 2>&3)
            local rc=$?
            exec 3>&-
            if [[ $rc -ne 0 ]]; then
                warn "Sélection de l'installation GLPI annulée."  1>>"${LOGFILE}"
                dialog --title "Annulation" --msgbox "Installation annulée par l'utilisateur." 7 50
                exit 1
            fi
            local index=$((selection - 1))
            FIND_REP_GLPI="${glpi_dirs[$index]}"
        else
            FIND_REP_GLPI="${glpi_dirs[0]}"
        fi
    fi
    # Si GLPI est déjà installé
    if [[ -n "${FIND_REP_GLPI}" ]]; then
        FIND_REP_GLPI="${FIND_REP_GLPI%/}/"
        echo "Répertoire GLPI trouvé : ${FIND_REP_GLPI}" | sudo tee -a "${LOGFILE}"
        version_file="${FIND_REP_GLPI}/version"
        installed_version=$(head -n1 "${version_file}" | tr -d '[:space:]')
        if [[ "$ID" == "debian" || "$ID" == "ubuntu" ]]; then
            GLPI_CLI_VERSION=$(sudo -u www-data php "${FIND_REP_GLPI}/bin/console" --version 2>/dev/null | awk '{print $3}' || true)
        else
            GLPI_CLI_VERSION=$(sudo -u nginx php "${FIND_REP_GLPI}/bin/console" --version 2>/dev/null | awk '{print $3}' || true)
        fi
        if [[ -f "${version_file}" && -n "${GLPI_CLI_VERSION}" ]]; then
            if [[ -z "${installed_version}" ]]; then
                installed_version="${GLPI_CLI_VERSION}"
            fi
            info "Version GLPI détectée : ${installed_version}" 1>> "${LOGFILE}"
        else
            dialog --title "Erreur" --msgbox "Fichier version introuvable dans ${FIND_REP_GLPI}" 6 60
            error "Fichier version introuvable dans ${FIND_REP_GLPI}" 2>> "${ERRORFILE}"
        fi
        # --- Comparaison ---
        if [[ -n "${installed_version}" && -n "${VERSION_SELECT}" && "${installed_version}" != "${VERSION_SELECT}" ]]; then
            if [[ "$(printf '%s\n%s\n' "${installed_version}" "${VERSION_SELECT}" | sort -V | head -n1)" == "${installed_version}" ]]; then
                dialog --title "GLPI" --sleep 5 --infobox "\n\n${MSG_GLPI_UPDATE}\n\nGLPI ${installed_version} → ${VERSION_SELECT}" 10 50
                if update; then
                    dialog --title "Information" --msgbox "Mise à jour GLPI ${installed_version} → ${VERSION_SELECT} terminée." 6 60
                    info "Mise à jour GLPI ${installed_version} → ${VERSION_SELECT} terminée." 1>> "${LOGFILE}"
                else
                    dialog --title "Erreur" --msgbox "La mise à jour de GLPI a échoué ou a été annulée." 6 60
                    error "Échec de la mise à jour GLPI." 2>> "${ERRORFILE}"
                    exit 1
                fi
            else
                dialog --title "Information" --sleep 5 --infobox "\nVersion actuelle (${installed_version}) plus récente\nque la cible (${VERSION_SELECT})" 10 50
                info "Version actuelle (${installed_version}) plus récente que la cible (${VERSION_SELECT})." 1>> "${LOGFILE}"
                exit 1
            fi
        fi
    else
        dialog --title "GLPI" --sleep 5 --infobox "\n\n${MSG_GLPI_NEW}\n\nGLPI ${VERSION_SELECT}" 10 50
        if glpi_install; then
            dialog --title "Information" --msgbox "L'installation de GLPI est terminée." 6 60
            info "Installation de GLPI ${VERSION_SELECT} terminée." 1>> "${LOGFILE}"
        else
            dialog --title "Erreur" --msgbox "L'installation de GLPI a échoué ou a été annulée." 6 60
            error "Échec de l'installation GLPI." 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            exit 1
        fi
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Exécuter les tâches avec barre de progression
function glpi_install() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    declare -A tasks=(
        ["$MSG_T01"]="update_distro"
        ["$MSG_T02"]="install_packages"
        ["$MSG_T03"]="network_info"
        ["$MSG_T04"]="mariadb_configure"
        ["$MSG_T05"]="install_glpi"
        ["$MSG_T06"]="setup_glpi"
        ["$MSG_T07"]="maj_user_glpi"
        ["$MSG_T08"]="write_credentials"
    )
    local task_order=("$MSG_T01" "$MSG_T02" "$MSG_T03" "$MSG_T04" "$MSG_T05" "$MSG_T06" "$MSG_T07" "$MSG_T08")
    local total_tasks=${#task_order[@]}
    local task_index=0
    (
    task_index=0
    for task_key in "${task_order[@]}"; do
        task_index=$((task_index + 1))
        progress=$((task_index * 100 / total_tasks))

        # --- Affichage progression
        echo "$progress"
        echo "XXX"
        echo "$task_index/$total_tasks - $task_key"
        echo "XXX"
        debug "$(date '+%F %T'): [START] $task_key" >> "${LOGFILE}"
        # --- Exécution silencieuse de la tâche
        if run_task "$task_key" "${tasks[$task_key]}" "$task_index" "$total_tasks" 1>>"${LOGFILE}" 2>>"${ERRORFILE}"; then
            debug "$(date '+%F %T'): [END] $task_key" >> "${LOGFILE}"
        else
            echo "100"
            echo "XXX"
            echo "$task_index/$total_tasks - $task_key : ${MSG_NONOK}"
            echo "XXX"
            warn "$(date '+%F %T'): [ERROR] $task_key error." >> "${LOGFILE}"
            dialog --title "Erreur" --msgbox "\n${MSG_ERROR_INSTALL}\n\nConsultez : ${ERRORFILE}" 8 70
            error "$MSG_ERROR_INSTALL\n\nConsultez : ${ERRORFILE}" >> "${ERRORFILE}"
            sleep 3
            exit 1
        fi
    done
    ) | dialog --clear --backtitle "$MSG_TITRE" --title "$MSG_TITRE_GAUGE" --gauge "" 8 120 0
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Mise à jour de la distribution
function update_distro(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
           info "$MSG_UPGRADE_DISTRO"
           timedatectl set-ntp true # Synchronise l'heure
           sleep 5
           apt-get update && apt-get upgrade -y
    elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
           info "$MSG_UPGRADE_DISTRO"
           chronyc makestep # Synchronise l'heure
           sleep 5
           yum update -y && yum upgrade -y
	fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Adresse IP de la machine
function network_info() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    # Détection de l’interface principale (hors loopback et interfaces virtuelles)
    INTERFACE=$(ip route get 1.1.1.1 2>/dev/null | awk '/dev/ {print $5; exit}')
    if [[ -z "$INTERFACE" ]]; then
        INTERFACE=$(ip -o link show | awk -F': ' '!/lo|docker|vir|veth/ {print $2; exit}')
    fi
    # Récupération de l’adresse IP associée
    IPADRESS=$(ip -4 addr show "$INTERFACE" 2>/dev/null | awk '/inet / {print $2}' | cut -d'/' -f1 | head -n1)
    # Vérification et export
    if [[ -n "$IPADRESS" ]]; then
        export IPADRESS
        info "$(date '+%F %T'): INFO: Interface détectée : ${INTERFACE}, IP : ${IPADRESS}" 1>> "${LOGFILE}"
    else
    warn "Impossible de déterminer l’adresse IP du serveur via l’interface ${INTERFACE:-inconnue}" 1>>"${LOGFILE}"
        IPADRESS="127.0.0.1"
        export IPADRESS
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Installation des éléments nécessaire
function install_packages(){
    debug "$(date '+%F %T') [$$][DEBUG:install_packages] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    source_os_release
    if [[ "${ID:-}" =~ ^(debian|ubuntu)$ ]]; then
        sleep 1
        export DEBIAN_FRONTEND=noninteractive
        # update cache first
        apt-get update
        if command -v apt-get 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            echo "$(date '+%Y-%m-%d %H:%M:%S'): DEBUG: apt-get update" 1>> "${LOGFILE}"
            if ! apt-get update 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
                warn "apt-get update failed"
                # continue, maybe cached; but log
            fi
        else
            error "apt-get not found, cannot install packages on Debian/Ubuntu branch" 2>> "${ERRORFILE}"
            return 1
        fi
        info "$MSG_INSTALL_EXT_PHP"
        if ! sudo apt-get install -y php-{bcmath,mysql,mbstring,curl,gd,xml,intl,ldap,apcu,opcache,xmlrpc,zip,bz2} 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_PHP_EXT_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        info "$MSG_INSTALL_SERVICE"
        if ! sudo apt-get install -y wget composer tar apache2 apache2-bin mariadb-server mariadb-client perl php 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_LAMP_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        info "$MSG_ACTIVE_START_BDD"
        if ! systemctl enable mariadb 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "Échec de l'activation de MariaDB." 2>> "${ERRORFILE}"
            return 1
        fi
        if ! systemctl restart mariadb 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "Échec du redémarrage de MariaDB." 2>> "${ERRORFILE}"
            return 1
        fi
        info "$MSG_ACTIVE_START_WEB"
        if ! systemctl enable apache2 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "Échec de l'activation d'Apache2." 2>> "${ERRORFILE}"
            return 1
        fi
        if ! systemctl restart apache2 1>> "${LOGFILE}" 2>> "${ERRORFILE}" ; then
            error "Échec du redémarrage d'Apache2." 2>> "${ERRORFILE}"
            return 1
        fi
    elif [[ "${ID:-}" =~ ^(almalinux|centos|rocky|rhel|fedora)$ ]]; then
        sleep 1
        dnf makecache --refresh 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        if ! command -v dnf >/dev/null 2>&1; then
            error "dnf not found, cannot install packages on RHEL-like branch" 2>> "${ERRORFILE}"
            return 1
        fi
        if ! dnf makecache --refresh 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_EPEL_FAILED" 2>> "${ERRORFILE}"
            # continue; attempt install may still work
        fi
        if ! dnf install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-9.noarch.rpm 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_EPEL_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        if ! dnf module reset -y php nginx mariadb composer 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_MODULES_RESET_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        if ! dnf module install -y php:8.2 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_PHP_INSTALL_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        if ! dnf module install -y nginx:1.24 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_NGINX_INSTALL_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        if ! dnf module install -y mariadb:10.11 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_MARIADB_INSTALL_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        info "$MSG_AUTO_UPDATES"
        if ! dnf install dnf-automatic -y 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            error "$MSG_DNF_AUTO_FAILED" 2>> "${ERRORFILE}"
            return 1
        fi
        {
            sed -i 's/^\(;\?\)\(apply_updates =\).*/\2 yes/' /etc/dnf/automatic.conf
            sed -i 's/^\(;\?\)\(reboot =\).*/\2 when-needed/' /etc/dnf/automatic.conf
            sed -i 's/^\(;\?\)\(upgrade_type =\).*/\2 security/' /etc/dnf/automatic.conf
        } 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        if ! mkdir /etc/systemd/system/dnf-automatic.timer.d 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_DNF_AUTO_DIR_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
        sudo tee /etc/systemd/system/dnf-automatic.timer.d/override.conf 1>> "${LOGFILE}" 2>> "${ERRORFILE}" << 'EOF'
[Unit]
Description=dnf-automatic timer
ConditionPathExists=!/run/ostree-booted
Wants=network-online.target

[Timer]
OnCalendar=*-*-* 6:00
RandomizedDelaySec=60m
Persistent=true
EOF
        if ! systemctl enable --now dnf-automatic.timer 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_DNF_AUTO_ACTIVATE_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
        info "$MSG_INSTALL_EXT_PHP"
        if ! dnf install -y php-{bcmath,mysql,mbstring,curl,gd,xml,intl,ldap,apcu,opcache,xmlrpc,zip,bz2} 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_PHP_EXT_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
        info "$MSG_INSTALL_SERVICE lamp..."
        if ! dnf install -y crontabs logrotate cronie tar nginx mariadb-server mariadb perl curl jq php epel-release 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_LAMP_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
        sed -i 's/^\(;\?\)\(user =\).*/\2 nginx/' /etc/php-fpm.d/www.conf
        sed -i 's/^\(;\?\)\(group =\).*/\2 nginx/' /etc/php-fpm.d/www.conf
        info "$MSG_ACTIVE_START_WEB MariaDB, d'ENGINE X et de PHP-FPM"
        if ! systemctl enable --now mariadb nginx php-fpm 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_SERVICES_START_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
        if ! firewall-cmd --permanent --zone=public --add-service=http || ! firewall-cmd --reload 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            warn "$MSG_FIREWALL_FAILED" 2>>"${LOGFILE}"
            return 1
        fi
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Configuration de la base de données MariaDB
function mariadb_configure() { 
    {
        debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>> "${LOGFILE}"
        # Détecter la commande MySQL/MariaDB
        info "$MSG_BDD_CONFIG"
    } 1>> "${LOGFILE}"
    MYSQL_CMD=$(command -v mysql || command -v mariadb || echo mysql) 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
    if [ -z "$MYSQL_CMD" ]; then 
        error "Commande MySQL/MariaDB introuvable" 2>> "${ERRORFILE}"
        return 1
    fi
    sleep 1
    # Construire la commande SQL et l'exécuter avec -e (évite les problèmes d'heredoc et de quoting)
    local _sql_root
    _sql_root="ALTER USER 'root'@'localhost' IDENTIFIED BY '${SQLROOTPWD}';"
    _sql_root+="\nDELETE FROM mysql.user WHERE User='';"
    _sql_root+="\nDELETE FROM mysql.user WHERE User='root' AND Host!='localhost';"
    _sql_root+="\nDROP DATABASE IF EXISTS test;"
    _sql_root+="\nDELETE FROM mysql.db WHERE Db='test' OR Db LIKE 'test_%';"
    _sql_root+="\nGRANT ALL PRIVILEGES ON *.* TO 'root'@'localhost' WITH GRANT OPTION;"
    _sql_root+="\nCREATE DATABASE IF NOT EXISTS \`${DB_NAME}\`;"
    _sql_root+="\nCREATE USER IF NOT EXISTS '${DB_USER}'@'localhost' IDENTIFIED BY '${SQLGLPIPWD}';"
    _sql_root+="\nGRANT ALL PRIVILEGES ON \`${DB_NAME}\`.* TO '${DB_USER}'@'localhost';"
    _sql_root+="\nGRANT SELECT ON mysql.time_zone_name TO '${DB_USER}'@'localhost';"
    _sql_root+="\nFLUSH PRIVILEGES;"
    if ! MYSQL_PWD="${SQLROOTPWD}" "${MYSQL_CMD}" -u root --batch --silent -e "${_sql_root}" mysql 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
        warn "$MSG_ERROR_TASK: base de données - échec des modifications en bloc" 2>> "${ERRORFILE}"
        return 1
    fi
    # Détection du fuseau horaire
    if [ -z "${TIMEZONE:-}" ]; then
        if command -v timedatectl 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
            TIMEZONE=$(timedatectl show -p Timezone --value 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || true)
        fi
        if [ -z "${TIMEZONE:-}" ] && [ -f /etc/timezone ]; then
            TIMEZONE=$(sed -n '1p' /etc/timezone 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || true)
        fi
        if [ -z "${TIMEZONE:-}" ]; then
            if [ -L /etc/localtime ] || [ -f /etc/localtime ]; then
                tzfile=$(readlink -f /etc/localtime 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || true)
                case "$tzfile" in
                    */usr/share/zoneinfo/*) TIMEZONE=${tzfile#*/usr/share/zoneinfo/} ;;
                esac
            fi
        fi
        if [ -z "${TIMEZONE:-}" ] && [ -f /etc/sysconfig/clock ]; then
            TIMEZONE=$(awk -F= '/^ZONE/ {gsub(/"/,"",$2); print $2}' /etc/sysconfig/clock 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || true)
        fi
        TIMEZONE=${TIMEZONE:-UTC}
        export TIMEZONE
        info "Fuseau horaire détecté : ${TIMEZONE}"
    fi
    info "$MSG_TIMEZONE_CONFIG"
    if ! mysql_tzinfo_to_sql /usr/share/zoneinfo | MYSQL_PWD="${SQLROOTPWD}" "${MYSQL_CMD}" -u root mysql 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
        warn "$MSG_ERROR_TASK: import du timezone échoué"
        return 1
    fi
    systemctl restart mariadb 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || warn "Impossible de redémarrer MariaDB (vérifiez le service)"
    sleep 5
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Téléchargement et décompression de GLPI
function install_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    info "$MSG_DOWNLOAD_INSTALL_GLPI"
    # Téléchargement de GLPI
    tmp_file="$(mktemp /tmp/glpi_XXX.tar.gz)"
    if ! wget -q -O "$tmp_file" "${DOWNLOADLINK}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
        warn "$MSG_DOWNLOAD_FAILED" 1>> "${ERRORFILE}"
        rm -f "$tmp_file"
        return 1
    fi
    if [ ! -d "$REP_GLPI" ]; then
        mkdir -p "$REP_GLPI" || { warn "$MSG_CREATE_DIR_FAILED"; rm -f "$tmp_file"; return 1; }
    fi
    # Extraire l'archive dans le répertoire d'installation
    tar xzf "$tmp_file" --strip-components=1 -C "$REP_GLPI"
    rm -f "$tmp_file"
    sleep 5;
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Mise en place des réglage pour GLPI
function setup_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    source_os_release
    info "$MSG_CONFIG_GLPI" 1>> "${LOGFILE}"
    mkdir -p /var/log/glpi  1>> "${LOGFILE}" 2>> "${ERRORFILE}"
    mkdir -p /etc/glpi/config  1>> "${LOGFILE}" 2>> "${ERRORFILE}"
    mkdir -p /var/lib/glpi/files  1>> "${LOGFILE}" 2>> "${ERRORFILE}"
    mv -f "${REP_GLPI}"/files /var/lib/glpi 1>> "${LOGFILE}" 2>> "${ERRORFILE}" ||
    {
        warn "Échec du déplacement du répertoire files de GLPI." 1>>"${LOGFILE}"
        return 1
    }
    sudo tee /etc/glpi/config/local_define.php  1>> "${LOGFILE}" 2>> "${ERRORFILE}" <<'EOF'
<?php
    define('GLPI_VAR_DIR', '/var/lib/glpi/files');
    define('GLPI_LOG_DIR', '/var/log/glpi');
EOF
    sleep 1
    sudo tee "${REP_GLPI}"/inc/downstream.php  1>> "${LOGFILE}" 2>> "${ERRORFILE}" <<EOF
<?php
    define('GLPI_CONFIG_DIR', '/etc/glpi/config');
    if (file_exists(GLPI_CONFIG_DIR . '/local_define.php')) {
        require_once GLPI_CONFIG_DIR . '/local_define.php';
    }
EOF
    network_info
    if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
        # Configuration d'Apache pour GLPI
        sudo tee /etc/apache2/sites-available/glpi.conf  1>> "${LOGFILE}" 2>> "${ERRORFILE}" <<EOF
<VirtualHost *:80>
    ServerName ${IPADRESS}
    DocumentRoot ${REP_GLPI}/public
    <Directory ${REP_GLPI}/public>
        Require all granted
        RewriteEngine On
        RewriteCond %{HTTP:Authorization} ^(.+)$
        RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^(.*)$ index.php [QSA,L]
    </Directory>
    ErrorLog /var/log/glpi/error.log
    CustomLog /var/log/glpi/access.log combined
</VirtualHost>
EOF
        phpversion=$(php -v | grep -i '(cli)' | awk '{print $2}' | cut -d. -f1,2)
        sed -i 's/^\(;\?\)\(session.cookie_httponly\).*/\2 =on/' /etc/php/"$phpversion"/apache2/php.ini 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        sleep 1
        # Disable Apache Web Server Signature
        echo "ServerSignature Off" >> /etc/apache2/apache2.conf
        echo "ServerTokens Prod" >> /etc/apache2/apache2.conf
        # Activation du module rewrite d'apache
        {
            # Enable Apache modules and site configuration
            # Mode rewrite activé
            a2enmod rewrite 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            # Déactiver le site par défaut
            a2dissite 000-default.conf 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            # Activer le site GLPI
            a2ensite glpi.conf 1>> "${LOGFILE}" 2>> "${ERRORFILE}";
            # Recharger la configuration d'Apache
            systemctl reload apache2 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            # Change permissions
            rights_glpi || { 
                warn "Échec de la modification des droits pour GLPI." 1>>"${LOGFILE}"
                return 1
            }
        } 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || {
            warn "Échec de la configuration d'Apache pour GLPI." 1>>"${LOGFILE}"
            return 1
        }
        # Installation de GLPI en ligne de commande
        CMD="${REP_GLPI}/bin/console db:install \
 --db-host localhost \
 --db-port=3306 \
 --db-name=${DB_NAME} \
 --db-user=${DB_USER} \
 --db-password=${SQLGLPIPWD} \
 --default-language=${LANGUAGE} \
 --force \
 --no-telemetry \
 --quiet \
 --no-interaction"
        echo "$(date '+%Y-%m-%d %H:%M:%S') - [INFO] Exécution : sudo -u www-data php ${CMD}" 1>> "${LOGFILE}" || true
        # Exécuter la commande en tant que www-data. Utiliser sudo tee pour écrire vers les fichiers protégés.
        if eval "sudo -u www-data php ${CMD}" 1>"${LOGFILE}" 2>> "${ERRORFILE}"; then
            info "Installation GLPI terminée avec succès." 1>> "${LOGFILE}"
        else
            warn "Échec de l'installation GLPI via console." 1>>"${LOGFILE}"
            return 1
        fi
        systemctl restart apache2
        # Configuration de la tâche Cron
        echo "*/2 * * * * www-data /usr/bin/php ""${REP_GLPI}""front/cron.php &>/dev/null" >> /etc/cron.d/glpi 
    elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
        network_info
        sudo tee /etc/nginx/conf.d/glpi.conf 1>> "${LOGFILE}" 2>> "${ERRORFILE}" << EOF
server {
    listen 80;
    server_name "${IPADRESS}";
    root ${REP_GLPI}public;
    location / {
        try_files \$uri /index.php\$is_args\$args;
    }
    location ~ ^/index\.php$ {
        # the following line needs to be adapted, as it changes depending on OS distributions and PHP versions
        fastcgi_pass unix:/var/run/php-fpm/www.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME \$document_root\$fastcgi_script_name;
    }
}
EOF
        sudo tee /etc/logrotate.d/glpi 1>> "${LOGFILE}" 2>> "${ERRORFILE}" << EOF
# Rotate GLPI logs daily, only if not empty
# Save 14 days old logs under compressed mode
/var/lib/glpi/files/_log/*.log {
    su nginx nginx
    daily
    rotate 14
    compress
    notifempty
    missingok
    create 644 nginx nginx
}
EOF
        chmod 0644 /etc/logrotate.d/glpi 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        chown root:root /etc/logrotate.d/glpi 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        chcon system_u:object_r:etc_t:s0 /etc/logrotate.d/glpi 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        sed -i 's/^\(;\?\)\(session.cookie_httponly\).*/\2 = on/' /etc/php.ini 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        # Change permissions
        rights_glpi || { 
            warn "Échec de la modification des droits pour GLPI." 1>>"${LOGFILE}"
            return 1
        }
        # Recharger la configuration de Nginx
        systemctl reload nginx php-fpm 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || {
            warn "Échec du rechargement de Nginx ou PHP-FPM." 1>>"${LOGFILE}"
            return 1
        }
        sleep 2
        # Installation de GLPI en ligne de commande
        CMD="php ${REP_GLPI}bin/console db:install --db-host=\"localhost\" --db-port=3306 --db-name=${DB_NAME} --db-user=${DB_USER} --db-password=\"${SQLGLPIPWD}\" --default-language=\"${LANGUAGE}\" --force --no-telemetry --no-interaction"
        eval sudo -u nginx "${CMD}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        echo "*/2 * * * * nginx /usr/bin/php ""${REP_GLPI}""front/cron.php &>/dev/null" >> /etc/cron.d/glpi
    fi
    sleep 5
    rm -Rf "${REP_GLPI}"install/install.php 1>> "${LOGFILE}" 2>> "${ERRORFILE}" || {
        warn "Échec de la suppression du script d'installation de GLPI." 1>>"${LOGFILE}"
        return 1
    }
    sleep 2
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Mise à jour des mot de passe des utilisateurs de GLPI
function maj_user_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    info "${MSG_CHANGE_MDP_GLPI}"
    # Ensure we have a mysql client command; fallback to detecting it if not set
    MYSQL_CMD=$(command -v mysql  || command -v mariadb || echo mysql)
    # Verify mysql client exists
    if ! command -v "${MYSQL_CMD}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
        warn "mysql client not found: ${MYSQL_CMD}"
        return 1
    fi
    # Construire la requête SQL et exécuter via -e
    local _sql_user
    _sql_user="USE '${DB_NAME}';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${ADMINGLPIPWD}') WHERE name = 'glpi';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${POSTGLPIPWD}') WHERE name = 'post-only';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${TECHGLPIPWD}') WHERE name = 'tech';"
    _sql_user+="\nUPDATE glpi_users SET password = MD5('${NORMGLPIPWD}') WHERE name = 'normal';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${TIMEZONE}' WHERE context = 'core' AND name = 'timezone';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${LANGUAGE}' WHERE context = 'core' AND name = 'language';"
    _sql_user+="\nUPDATE glpi_configs SET value = '${IPADRESS}' WHERE context = 'core' AND name = 'url_base';"
    echo "${_sql_user}" 1>> "${LOGFILE}"
    # Execute the SQL commands
    if ! MYSQL_PWD="${SQLGLPIPWD}" "${MYSQL_CMD}" -u "${DB_USER}" --batch --silent -e "${_sql_user}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"; then
        error "$MSG_ERROR_TASK: base de données - échec des modifications en bloc" 2>> "${ERRORFILE}"
        return 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
function source_os_release(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    if [[ -f /etc/os-release ]]; then
        # shellcheck disable=SC1091
        . /etc/os-release
    fi
    if [[ -f /etc/lsb-release ]]; then
        # shellcheck disable=SC1091
        . /etc/lsb-release
    fi
    if [[ -z "${ID:-}" ]]; then
        ID=$(uname -s | tr '[:upper:]' '[:lower:]')
    fi
    if [[ -z "${VERSION_ID:-}" ]]; then
        VERSION_ID=$(uname -r)
    fi
    if [ -z "${ID:-}" ] || [ -z "${VERSION_ID:-}" ]; then
    warn "Variables ID ou VERSION_ID non définies après sourcing de /etc/os-release"  1>>"${LOGFILE}"
        return 1
    fi
    export ID VERSION_ID
    info "$(date '+%F %T'): INFO: OS détecté : ${ID} ${VERSION_ID}" 1>> "${LOGFILE}"
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
function rights_glpi(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    # Changer les droits des répertoires et fichiers
    {
        info "$MSG_RIGHTS_GLPI"
        for dir in /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}"; do
            [[ -d "$dir" ]] || continue
            find "$dir" -type d -exec chmod 755 {} \; 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            find "$dir" -type f -exec chmod 644 {} \; 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        done
    } 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
    # Changer le propriétaire des répertoires
    case "${ID}" in
        debian|ubuntu)
            {
                sudo chown -Rc www-data:www-data /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            } 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            ;;
        almalinux|centos|rocky|rhel)
            {
                sudo chown -Rc nginx:nginx /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
                if command -v semanage; then
                    setsebool -P httpd_can_network_connect on
                    setsebool -P httpd_can_network_connect_db on
                    setsebool -P httpd_can_sendmail on
                    for p in "${REP_GLPI}" /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}/marketplace"; do
                        semanage fcontext -a -t httpd_sys_rw_content_t "${p}(/.*)?"
                    done
                    restorecon -R "${REP_GLPI}" /etc/glpi /var/lib/glpi /var/log/glpi "${REP_GLPI}/marketplace"
                else
                    error "$(date '+%F %T'): WARN: semanage non disponible — SELinux non configuré" 2>> "${ERRORFILE}"
                fi
            } 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
            ;;
        *)
            error "$(date '+%F %T'): WARN: Distribution ${ID:-unknown} non reconnue — aucun changement propriétaire" 2>> "${ERRORFILE}"
            ;;
    esac
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Afficher le résultat final
function display_result() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    MESSAGE=""
	if [[ -f "${FICHIER_MSG}" ]]; then
        while IFS= read -r ligne; do
            MESSAGE+="${ligne}\n"
        done < "${FICHIER_MSG}"
        dialog --backtitle "${MSG_TITRE}" --title "${MSG_TITRE_OK}" --msgbox "${MESSAGE}" 0 0
    else
        while IFS= read -r ligne; do
            MESSAGE+="${ligne}\n"
        done < "${ERRORFILE}"
        dialog --backtitle "${MSG_TITRE}" --title "${MSG_TITRE_NONOK}" --msgbox "${MSG_NONOK}\n\n${MSG_ERROR_FICHIER_MSG}" 0 0
        exit 1
    fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Ecriture du fichier pour sauvegarder les mot de passe du serveur GLPI
function write_credentials(){
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    if [[ "${LANGUAGE}" == "fr_FR" ]]; then
        cat > "$FICHIER_MSG" << EOF
<==========================> Détails de l'installation de GLPI <=================================>
 GLPI Version: ${VERSION_SELECT}
 Répertoire d'installation de GLPI: ${REP_GLPI}

 Les comptes utilisateurs par défaut sont :
 UTILISATEUR   -  MOT DE PASSE       -       ACCES
  glpi         -  ${ADMINGLPIPWD}     -  compte admin
  post-only    -  ${POSTGLPIPWD}     -  compte post-only
  tech         -  ${TECHGLPIPWD}     -  compte tech
  normal       -  ${NORMGLPIPWD}     -  compte normal

 Vous pouvez accéder à la page web de GLPI à partir d'une adresse IP ou d'un nom d'hôte :
 http://${DB_HOST}

 ==> Base de données:
 Hôte de la base de données: ${DB_HOST}
 Port de la base de données: 3306
 Nom de la base de données GLPI: ${DB_NAME}
 Mot de passe root: ${SQLROOTPWD}
 Mot de passe ${DB_USER}: ${SQLGLPIPWD}

 Fichier de sauvegarde enregistré dans ${FICHIER_MSG}
 <===============================================================================================>

 Si vous rencontrez un probléme avec ce script, veuillez le signaler sur GitHub : https://github.com/PapyPoc/glpi_install/issues
EOF
	else
		cat > "$FICHIER_MSG" << EOF
<=============================> GLPI installation details <=====================================>
 GLPI version: ${VERSION_SELECT}
 GLPI installation directory: ${REP_GLPI}

 The default user accounts are:
    USER         -    PASSWORD        -       ACCESS
  glpi           -  ${ADMINGLPIPWD}      -  admin account
  post-only      -  ${POSTGLPIPWD}      -  post-only account
  tech           -  ${TECHGLPIPWD}      -  tech account
  normal         -  ${NORMGLPIPWD}      -  normal account

 You can access the GLPI web page from the following address :
 http://${DB_HOST}

 ==> Database:
 Database host: ${DB_HOST}
 Database port: 3306
 GLPI database name: ${DB_NAME}
 Root password: ${SQLROOTPWD}
 ${DB_USER} password: ${SQLGLPIPWD}

 Backup file saved to ${FICHIER_MSG}
 <===============================================================================================>

 If you encounter a problem with this script, please report it on GitHub : https://github.com/PapyPoc/glpi_install/issues
EOF
	fi
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Fonction principale pour exécuter les tâches avec barre de progression
function update() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    declare -A tasks=(
        ["$MSG_T20"]="maintenance 1"
        ["$MSG_T21"]="update_distro"
        ["$MSG_T22"]="backup_glpi"
        ["$MSG_T23"]="install_glpi"
        ["$MSG_T24"]="update_glpi"
        ["$MSG_T25"]="maintenance 0"
    )
    task_order=("$MSG_T20" "$MSG_T21" "$MSG_T22" "$MSG_T23" "$MSG_T24" "$MSG_T25")
    total_tasks=${#task_order[@]}
    task_index=0
    (
        for task_key in "${task_order[@]}"; do
            task_index=$((task_index + 1))
            progress=$((task_index * 100 / total_tasks))
            echo "$progress"
            echo "XXX"
            echo "$task_index/$total_tasks - $task_key"
            echo "XXX"
            if run_task "$task_key" "${tasks[$task_key]}" "$task_index" "$total_tasks"; then
                echo "$progress"
                echo "XXX"
                echo "$task_index/$total_tasks - $task_key : ${MSG_OK}"
                echo "XXX"
            else
                echo "100"
                echo "XXX"
                echo "$task_index/$total_tasks - $task_key : ${MSG_NONOK}"
                echo "XXX"
                return 1   # <-- remonte l'erreur au parent
            fi
            sleep 0.5
        done
    ) | dialog --backtitle "$MSG_TITRE" --title "$MSG_TITRE_GAUGE" --gauge "" 8 120
    # Récupérer le code de retour du sous-shell
    if [ ${PIPESTATUS[0]} -ne 0 ]; then
    warn "Une tâche a échoué pendant l'exécution de update()." 1>>"${LOGFILE}"
        return 1
    fi
    info "Toutes les tâches ont été exécutées avec succès." 1>> "${LOGFILE}"
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Activé ou déactivé le mode maintenance (1 ou 0)
function maintenance(){ 
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    if [ "$1" == "1" ]; then
        warn "${MSG_ACTIVE_SERVICE}" 1>> "${LOGFILE}"
        if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
            sudo -u www-data php "${REP_GLPI}"bin/console glpi:maintenance:enable 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
            sudo -u nginx php "${REP_GLPI}"bin/console glpi:maintenance:enable 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        fi
    elif [ "$1" == "0" ]; then
        info "$MSG_DEACTIVE_SERVICE" 1>> "${LOGFILE}"
        if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
            sudo -u www-data php "${REP_GLPI}"bin/console glpi:maintenance:disable 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
            sudo -u nginx php "${REP_GLPI}"bin/console glpi:maintenance:disable
        fi
    fi
	sleep 2;
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Sauvegarde de la base de donnée et des fichiers de GLPI
function backup_glpi() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    info "=== Démarrage de la sauvegarde GLPI ===" 1>> "${LOGFILE}"
    # Vérification préliminaire
    if [ -z "${REP_GLPI}" ] || [ -z "${REP_BACKUP_COMPRESS}" ] || [ -z "${INVOKING_HOME}" ]; then
    warn "Variables d'environnement manquantes (REP_GLPI, REP_BACKUP_COMPRESS, INVOKING_HOME)" 1>>"${LOGFILE}"
        return 1
    fi
    # Lecture des informations MySQL
    local DB_NAME PASSWORD
    DB_NAME=$(sed -n 's/.*\(Nom de la base de données GLPI\|GLPI database name\): \([^ ]*\).*/\2/p' "${INVOKING_HOME}/sauve_mdp.txt")
    PASSWORD=$(sed -n 's/.*\(Mot de passe root\|Root password\): \([^ ]*\).*/\2/p' "${INVOKING_HOME}/sauve_mdp.txt")
    if [ -z "${DB_NAME}" ] || [ -z "${PASSWORD}" ]; then
    warn "Impossible de lire le nom de base ou le mot de passe depuis sauve_mdp.txt" 1>>"${LOGFILE}"
        return 1
    fi
    # Détermination de l’outil de dump
    local MYSQLDUMP_CMD
    MYSQLDUMP_CMD=$(command -v mysqldump 2>/dev/null || command -v mariadb-dump 2>/dev/null || echo mysqldump)
    # Répertoires de sauvegarde
    REP_BACKUP="${INVOKING_HOME}/backup_glpi_$(date +"%Y-%m-%d")"
    local BDD_BACKUP; BDD_BACKUP="bdd_glpi_$(date +"%Y-%m-%d_%H-%M-%S").sql"
    mkdir -p "${REP_BACKUP}"
    # --- Sauvegarde BDD ---
    info "${MSG_MYSQL_DUMP}" 1>> "${LOGFILE}"
    if ${MYSQLDUMP_CMD} -u root -p"${PASSWORD}" --databases "${DB_NAME}" > "${REP_BACKUP}/${BDD_BACKUP}" 2>> "${ERRORFILE}"; then
        info "${MSG_DUMP_SUCCESS}" 1>> "${LOGFILE}"
    else
    warn "Échec de la sauvegarde de la base ${DB_NAME}" 1>>"${LOGFILE}"
        return 1
    fi
    # --- Sauvegarde des fichiers ---
    info "${MSG_SITE_COPY}" 1>> "${LOGFILE}"
    for SRC in "/etc/glpi/config" "/var/lib/glpi/files" "${REP_GLPI}/plugins" "${REP_GLPI}/marketplace" "${REP_GLPI}/inc/downstream.php"; do
        if [ -e "${SRC}" ]; then
            cp -Rf "${SRC}" "${REP_BACKUP}/" 1>> "${LOGFILE}" 2>> "${ERRORFILE}"
        else
            warn "Source manquante : ${SRC}" 1>>"${LOGFILE}"
        fi
    done
    info "${MSG_SITE_COPY_OK}" 1>> "${LOGFILE}"
    # --- Compression ---
    info "${MSG_COMPRESS_BACKUP}" 1>> "${LOGFILE}"
    mkdir -p "${REP_BACKUP_COMPRESS}"
    local BACKUP_FILE; BACKUP_FILE="${REP_BACKUP_COMPRESS}/backup_glpi_$(date +"%Y-%m-%d_%H-%M-%S").tar.gz"
    if tar -czf "${BACKUP_FILE}" -C "${REP_BACKUP}" . 2>> "${ERRORFILE}"; then
        info "${MSG_COMPRESS_BACKUP_OK} (${BACKUP_FILE})" 1>> "${LOGFILE}"
        # Vérifier que le fichier compressé n'est pas vide
        if [ ! -s "${BACKUP_FILE}" ]; then
            warn "Fichier de sauvegarde vide, suppression annulée." 1>>"${LOGFILE}"
            return 1
        fi
        # Suppression sécurisée de l’ancien GLPI
        info "${MSG_REMOVE_OLD_GLPI_DIR}"
        if [ -n "${REP_GLPI}" ] && [ -d "${REP_GLPI}" ]; then
            rm -rf "${REP_GLPI:?}/"
            info "Répertoire ${REP_GLPI} supprimé." 1>> "${LOGFILE}"
        else
            warn "Répertoire GLPI introuvable : ${REP_GLPI}" 1>>"${LOGFILE}"
        fi
    else
    warn "${MSG_COMPRESS_BACKUP_FAILED}" 1>>"${LOGFILE}"
        return 1
    fi
    info "=== Sauvegarde GLPI terminée avec succès ===" 1>> "${LOGFILE}"
    sleep 2
    export REP_BACKUP
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}
# Mise à jour de GLPI
function update_glpi() {
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Depuis ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
    info "=== Début de la mise à jour GLPI ===" 1>>"${LOGFILE}" 
    # Vérification de base
    if [ -z "${REP_BACKUP}" ] || [ -z "${REP_GLPI}" ]; then
    warn "Variables REP_BACKUP ou REP_GLPI non définies, arrêt de la mise à jour." 1>>"${LOGFILE}"
        return 1
    fi
    # --- Étape 1 : restauration des fichiers de configuration et des plugins ---
    info "${MSG_RESTORE_FILES}" 1>>"${LOGFILE}"
    for DIR in config files plugins marketplace; do
        SRC="${REP_BACKUP}/${DIR}"
        if [ -d "${SRC}" ]; then
            case "${DIR}" in
                config) DEST="/etc/glpi/config" ;;
                files) DEST="/var/lib/glpi/files" ;;
                plugins) DEST="${REP_GLPI}/plugins" ;;
                marketplace) DEST="${REP_GLPI}/marketplace" ;;
            esac
            mkdir -p "${DEST}"
            if compgen -G "${SRC}/*" > /dev/null; then
                if cp -Rf "${SRC}/"* "${DEST}/" 2>> "${ERRORFILE}"; then
                    info "Restauration de ${DIR} vers ${DEST} terminée." 1>>"${LOGFILE}"
                else
                    warn "Erreur lors de la copie de ${DIR}." 2>>"${LOGFILE}"
                fi
            else
                warn "Répertoire ${SRC} vide, rien à copier." 2>>"${LOGFILE}"
            fi
        fi
    done
    # --- Étape 2 : restauration du fichier downstream.php ---
    info "Restauration du fichier downstream.php si présent." 1>>"${LOGFILE}"
    if [ -f "${REP_BACKUP}/inc/downstream.php" ]; then
        mkdir -p "${REP_GLPI}/inc"
        if cp -Rf "${REP_BACKUP}/inc/downstream.php" "${REP_GLPI}/inc/" 2>> "${ERRORFILE}"; then
            info "Fichier downstream.php restauré." 1>>"${LOGFILE}"
        else
            warn "Erreur lors de la restauration de downstream.php" 2>> "${ERRORFILE}"
        fi
    fi
    # --- Étape 3 : suppression de la sauvegarde ---
    info "${MSG_REMOVE_OLD_FILES}" 1>>"${LOGFILE}"
    info "${MSG_REMOVE_OLD_FILES}" 1>>"${LOGFILE}"
    if [ -d "${REP_BACKUP}" ]; then
        rm -rf "${REP_BACKUP:?}"
        info "Répertoire ${REP_BACKUP} supprimé avec succès." 1>>"${LOGFILE}"
    else
        warn "Répertoire ${REP_BACKUP} introuvable." 2>> "${ERRORFILE}"
    fi
    # --- Étape 4 : mise à jour de la base GLPI ---
    info "${MSG_UPDATE_GLPI_DATABASE}"
    rights_glpi
    if [[ "${ID}" =~ ^(debian|ubuntu)$ ]]; then
        sudo -u www-data php "${REP_GLPI}/bin/console" db:update --quiet --no-interaction --force 1>"${LOGFILE}" 2>> "${ERRORFILE}"
    elif [[ "${ID}" =~ ^(almalinux|centos|rocky|rhel)$ ]]; then
        sudo -u nginx php "${REP_GLPI}/bin/console" db:update --quiet --no-interaction --force 1>"${LOGFILE}" 2>> "${ERRORFILE}"
    fi
    if [ $? -eq 0 ]; then
        info "Mise à jour de la base GLPI réussie." 1>>"${LOGFILE}"
    else
        warn "Échec de la mise à jour de la base GLPI." 2>> "${ERRORFILE}"
        return 1
    fi
    # --- Étape 5 : nettoyage final ---
    info "${MSG_UPDATE_CLEAN}"
    rm -f "${REP_GLPI}/install/install.php" 2>> "${ERRORFILE}"
    rm -rf "${REP_BACKUP}/backup_glpi" 2>> "${ERRORFILE}"

    info "=== Fin de la mise à jour GLPI ===" 1>>"${LOGFILE}"
    sleep 2
    debug "$(date '+%F %T') [$$][DEBUG: ${FUNCNAME[0]:-main}] Fin de ${FUNCNAME[1]:-main}" 1>>"${LOGFILE}"
}